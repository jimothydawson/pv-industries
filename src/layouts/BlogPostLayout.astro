---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NewsletterSubscription from '../components/NewsletterSubscription.astro';

export interface Props {
  title: string;
  description?: string;
  category: string;
  date: string;
  readTime: string;
  heroImage: string;
  content: string;
  relatedArticles?: Array<{
    id: number;
    title: string;
    excerpt: string;
    image: string;
    category: string;
    date: string;
    readTime: string;
    slug: string;
  }>;
}

const { 
  title, 
  description, 
  category, 
  date, 
  readTime, 
  heroImage, 
  content,
  relatedArticles = []
} = Astro.props;

// Format date for display
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-AU', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="blog-post">
    <!-- Blog Post Header -->
    <section class="blog-header">
      <div class="container">
        <div class="blog-header-content">
          <div class="blog-meta">
            <span class="blog-category">{category.toUpperCase()}</span>
            <span class="blog-date">{formatDate(date)}</span>
          </div>
          
          <h1 class="blog-title">{title}</h1>
          
          <div class="blog-info">
            <span class="read-time">{readTime}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Hero Image -->
    <section class="blog-hero-image">
      <div class="container">
        <div class="hero-image-wrapper">
          <img 
            src={heroImage} 
            alt={title}
            class="hero-image"
          />
        </div>
      </div>
    </section>

    <!-- Blog Content -->
    <section class="blog-content">
      <div class="container">
        <div class="content-wrapper">
          <article class="blog-article">
            <div class="article-content" set:html={content}></div>
          </article>
        </div>
      </div>
    </section>

    <!-- Newsletter Subscription -->
    <NewsletterSubscription />

    <!-- Related Articles -->
    {relatedArticles.length > 0 && (
      <section class="related-articles">
        <div class="container">
          <div class="related-articles-header">
            <h2 class="related-articles-title">Related articles</h2>
            <a href="/articles" class="browse-all-link">
              Browse all articles
              <svg class="browse-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
          
          <div class="related-articles-grid">
            {relatedArticles.map((article) => (
              <article class="related-article-card">
                <div class="related-article-image">
                  <img 
                    src={article.image} 
                    alt={article.title}
                    loading="lazy"
                  />
                  <div class="related-article-category">
                    {article.category}
                  </div>
                </div>
                
                <div class="related-article-content">
                  <h3 class="related-article-title">
                    <a href={`/articles/${article.slug}`} class="related-article-link">
                      {article.title}
                    </a>
                  </h3>
                  
                  <p class="related-article-excerpt">
                    {article.excerpt}
                  </p>
                  
                  <div class="related-article-meta">
                    <time class="related-article-date" datetime={article.date}>
                      {formatDate(article.date)}
                    </time>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  /* Blog Header */
  .blog-header {
    background: var(--color-neutral-900);
    color: var(--color-neutral-100);
    padding: var(--space-20) 0 var(--space-12);
  }

  .blog-header-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .blog-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-sm);
  }

  .blog-category {
    background: var(--color-primary);
    color: var(--color-neutral-900);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: var(--font-size-xs);
  }

  .blog-date {
    color: var(--color-neutral-300);
    font-weight: 500;
  }

  .blog-title {
    font-size: var(--font-size-5xl);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--space-6);
    color: var(--color-neutral-100);
  }

  .blog-info {
    color: var(--color-neutral-400);
    font-size: var(--font-size-sm);
  }

  /* Hero Image */
  .blog-hero-image {
    padding: var(--space-8) 0;
    background: var(--color-neutral-900);
  }

  .hero-image-wrapper {
    max-width: 800px;
    margin: 0 auto;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .hero-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* Blog Content */
  .blog-content {
    padding: var(--space-16) 0;
    background: var(--color-neutral-100);
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .blog-article {
    background: var(--color-neutral-100);
  }

  .article-content {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--color-neutral-700);
  }

  /* Content Typography */
  .article-content :global(h2) {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: var(--space-8) 0 var(--space-4);
    line-height: 1.3;
  }

  .article-content :global(h3) {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: var(--space-6) 0 var(--space-3);
    line-height: 1.3;
  }

  .article-content :global(h4) {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: var(--space-5) 0 var(--space-2);
    line-height: 1.3;
  }

  .article-content :global(p) {
    margin-bottom: var(--space-6);
    line-height: 1.7;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: var(--space-4) 0 var(--space-6);
    padding-left: var(--space-6);
  }

  .article-content :global(li) {
    margin-bottom: var(--space-2);
    line-height: 1.6;
  }

  .article-content :global(strong) {
    font-weight: 600;
    color: var(--color-neutral-900);
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-4);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--color-neutral-600);
  }

  /* Related Articles */
  .related-articles {
    padding: var(--space-16) 0;
    background: var(--color-neutral-200);
  }

  .related-articles-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-10);
  }

  .related-articles-title {
    font-size: var(--font-size-3xl);
    font-weight: 600;
    color: var(--color-neutral-900);
  }

  .browse-all-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-normal);
  }

  .browse-all-link:hover {
    color: var(--color-primary);
    gap: var(--space-3);
  }

  .browse-icon {
    transition: transform var(--transition-normal);
  }

  .browse-all-link:hover .browse-icon {
    transform: translateX(2px);
  }

  .related-articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }

  /* Related Article Cards */
  .related-article-card {
    background: var(--color-neutral-100);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
    border: 1px solid var(--color-neutral-300);
  }

  .related-article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .related-article-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .related-article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .related-article-card:hover .related-article-image img {
    transform: scale(1.05);
  }

  .related-article-category {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    background: var(--color-primary);
    color: var(--color-neutral-900);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .related-article-content {
    padding: var(--space-6);
  }

  .related-article-title {
    margin-bottom: var(--space-3);
    font-size: var(--font-size-xl);
    font-weight: 600;
    line-height: 1.3;
  }

  .related-article-link {
    color: var(--color-neutral-900);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .related-article-link:hover {
    color: var(--color-secondary);
  }

  .related-article-excerpt {
    color: var(--color-neutral-600);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .related-article-meta {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-500);
  }

  .related-article-date {
    font-weight: 500;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-header {
      padding: var(--space-16) 0 var(--space-8);
    }

    .blog-title {
      font-size: var(--font-size-4xl);
    }

    .blog-meta {
      flex-direction: column;
      gap: var(--space-2);
    }

    .blog-content {
      padding: var(--space-12) 0;
    }

    .article-content {
      font-size: var(--font-size-base);
    }

    .related-articles {
      padding: var(--space-12) 0;
    }

    .related-articles-header {
      flex-direction: column;
      gap: var(--space-4);
      text-align: center;
    }

    .related-articles-title {
      font-size: var(--font-size-2xl);
    }

    .related-articles-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .related-article-content {
      padding: var(--space-5);
    }
  }

  @media (max-width: 480px) {
    .blog-header {
      padding: var(--space-12) 0 var(--space-6);
    }

    .blog-title {
      font-size: var(--font-size-3xl);
    }

    .blog-hero-image {
      padding: var(--space-6) 0;
    }

    .blog-content {
      padding: var(--space-10) 0;
    }

    .related-articles {
      padding: var(--space-10) 0;
    }
  }
</style>
</Layout>