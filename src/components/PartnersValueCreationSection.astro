---
// Partners Value Creation section following the exact script structure
const valueData = {
  h2: "Creating Value Through Clean Material Supply",
  body: "Our partners span industries including manufacturing, construction, electronics, packaging, and renewable technologies. We provide consistent, high-quality feedstock materials recovered from end-of-life solar panels and components."
};
---

<section class="value-creation-section" id="value-creation">
  <div class="container">
    <div class="section-header">
      <div class="section-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
          <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <h2 class="section-title">{valueData.h2}</h2>
      <p class="section-body">{valueData.body}</p>
    </div>
    
    <div class="industries-showcase">
      <div class="industry-item" data-aos="fade-up" data-aos-delay="0">
        <div class="industry-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="industry-name">Manufacturing</span>
      </div>
      
      <div class="industry-item" data-aos="fade-up" data-aos-delay="100">
        <div class="industry-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M3 21H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M5 21V7L13 2L21 7V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M9 9V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M15 9V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="industry-name">Construction</span>
      </div>
      
      <div class="industry-item" data-aos="fade-up" data-aos-delay="200">
        <div class="industry-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="industry-name">Electronics</span>
      </div>
      
      <div class="industry-item" data-aos="fade-up" data-aos-delay="300">
        <div class="industry-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M21 16V8C20.9996 7.64928 20.9071 7.30481 20.7315 7.00116C20.556 6.69751 20.3037 6.44536 20 6.27L13 2.27C12.696 2.09446 12.3511 2.00205 12 2.00205C11.6489 2.00205 11.304 2.09446 11 2.27L4 6.27C3.69626 6.44536 3.44398 6.69751 3.26846 7.00116C3.09294 7.30481 3.00036 7.64928 3 8V16C3.00036 16.3507 3.09294 16.6952 3.26846 16.9988C3.44398 17.3025 3.69626 17.5546 4 17.73L11 21.73C11.304 21.9055 11.6489 21.9979 12 21.9979C12.3511 21.9979 12.696 21.9055 13 21.73L20 17.73C20.3037 17.5546 20.556 17.3025 20.7315 16.9988C20.9071 16.6952 20.9996 16.3507 21 16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="industry-name">Packaging</span>
      </div>
      
      <div class="industry-item" data-aos="fade-up" data-aos-delay="400">
        <div class="industry-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 16C16.4183 16 20 12.4183 20 8C20 3.58172 16.4183 0 12 0C7.58172 0 4 3.58172 4 8C4 12.4183 7.58172 16 12 16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="industry-name">Renewable Technologies</span>
      </div>
    </div>
  </div>
</section>

<style>
  .value-creation-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-50);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-6) auto;
    color: var(--color-neutral-100);
    animation: fadeInUp 0.8s ease-out;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-6);
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .section-body {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-600);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .industries-showcase {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-8);
    margin-top: var(--space-12);
  }

  .industry-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-6);
    background: var(--color-neutral-100);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-neutral-200);
    transition: all var(--transition-normal);
    min-width: 140px;
  }

  .industry-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary-light);
  }

  .industry-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-100);
  }

  .industry-name {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-neutral-700);
    text-align: center;
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .section-header {
      text-align: left;
    }
    
    .section-icon {
      margin-left: 0;
    }
    
    .industries-showcase {
      justify-content: flex-start;
      gap: var(--space-4);
    }
    
    .industry-item {
      min-width: 120px;
      padding: var(--space-4);
    }
  }
</style>