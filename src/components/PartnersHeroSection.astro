---
// Partners Hero section following the exact script structure
const heroData = {
  h1: "Our Partners in Circular Innovation",
  h2: "Supplying Clean, High-Quality Materials for Remanufacturing and Sustainable Product Development",
  h3: "At PV Industries, we don't just recycle solar panels â€” we unlock their value for the future.",
  body: "Through our advanced solar panel processing and material recovery systems, we supply clean, high-grade raw materials to innovative partners who remanufacture these materials into new products. Together, we are building a robust circular economy for Australia's solar industry and beyond."
};
---

<section class="partners-hero-section" id="partners-hero">
  <div class="hero-background"></div>
  
  <div class="container">
    <div class="hero-content">
      <div class="hero-icon">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none">
          <path d="M14.7 6.3C16.2 7.8 16.2 10.2 14.7 11.7L11.7 14.7C10.2 16.2 7.8 16.2 6.3 14.7C4.8 13.2 4.8 10.8 6.3 9.3L9.3 6.3C10.8 4.8 13.2 4.8 14.7 6.3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M9.7 17.7C8.2 16.2 8.2 13.8 9.7 12.3L12.7 9.3C14.2 7.8 16.6 7.8 18.1 9.3C19.6 10.8 19.6 13.2 18.1 14.7L15.1 17.7C13.6 19.2 11.2 19.2 9.7 17.7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      
      <h1 class="hero-h1">{heroData.h1}</h1>
      <h2 class="hero-h2">{heroData.h2}</h2>
      <h3 class="hero-h3">{heroData.h3}</h3>
      <p class="hero-body">{heroData.body}</p>
      
      <div class="hero-actions">
        <a href="#materials" class="button button-primary">
          Our Materials
          <svg class="button-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="#contact" class="button button-secondary">
          Become a Partner
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .partners-hero-section {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    color: var(--color-neutral-100);
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    z-index: -1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-20) var(--space-4);
  }

  .hero-content {
    max-width: 900px;
    text-align: center;
  }

  .hero-icon {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-8) auto;
    color: var(--color-primary-light);
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: var(--space-6);
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .hero-h2 {
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 500;
    line-height: 1.3;
    margin-bottom: var(--space-8);
    color: var(--color-primary-light);
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-h3 {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: var(--space-6);
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  .hero-body {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    margin-bottom: var(--space-8);
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    animation: fadeInUp 0.8s ease-out 0.5s both;
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .hero-content {
      text-align: left;
    }
    
    .hero-icon {
      margin-left: 0;
    }
    
    .hero-actions {
      justify-content: flex-start;
      flex-direction: column;
    }
    
    .button {
      justify-content: center;
    }
  }
</style>