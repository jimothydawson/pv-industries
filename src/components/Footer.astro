---
// Footer component with Member.jpg image
---

<!-- Footer -->
<footer class="footer">
  <div class="footer-background"></div>
  
  <div class="container">
    <!-- Footer Top -->
    <div class="footer-top">
      <div class="footer-logos-column">
        <div class="footer-logo">
          <a href="/" class="logo-link">
            <img
              src="/images/cropped-orangewhite_1000x1000.png"
              alt="PV Industries Logo"
              class="footer-logo-image"
            />
          </a>
        </div>
        
        <div class="footer-member">
          <img
            src="/images/Member.jpg"
            alt="Member"
            class="footer-member-image"
          />
          <img
            src="/images/GOLD-Member-Badge-SEC.jpg"
            alt="Gold Member Badge SEC"
            class="footer-member-image"
          />
        </div>
      </div>
      
      <div class="footer-content">
        <div class="footer-text">
          <h3 class="footer-title">The future of solar recycling</h3>
        </div>
      </div>
      
      <div class="footer-actions">
        <a href="/contact" class="button button-primary">
          Get a quote
          <svg class="button-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="/about" class="button button-secondary">
          Learn more
        </a>
      </div>
    </div>

    <!-- Footer Center -->
    <div class="footer-center">
      <div class="footer-newsletter">
        <div class="newsletter-content">
          <h4 class="newsletter-title">Stay up to date</h4>
          <p class="newsletter-description">
            Sign up to our newsletter to receive our latest news and information as we continue to grow. 
            We only get in touch when it's important and you can unsubscribe at any time.
          </p>
        </div>
        
        <div class="newsletter-form-wrapper">
          <form class="newsletter-form">
            <div class="form-input-wrapper">
              <input 
                type="email" 
                placeholder="Enter your email" 
                required 
                class="newsletter-input"
                aria-label="Email address"
              />
              <button type="submit" class="newsletter-button">
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-legal">
        <p class="copyright">Copyright Â© PV Industries</p>
        <div class="legal-links">
          <a href="/privacy-policy" class="legal-link">Privacy Policy</a>
          <a href="/terms-of-use" class="legal-link">Terms of Use</a>
        </div>
      </div>
      
      <div class="footer-social">
        <div class="social-links">
          <a href="https://www.facebook.com/pvindustriesAUS" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Facebook">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="https://www.instagram.com/pv_industries" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Instagram">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
