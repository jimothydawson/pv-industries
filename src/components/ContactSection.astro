---
import ContactForm from './ContactForm.astro';

// Contact section data
const contactData = {
  title: "Get in touch",
  description: "",
  email: "contact@pvindustries.com.au",
  locations: ["New South Wales", "Victoria", "ACT", "South Australia"],
  socialLinks: [
    { name: "Facebook", url: "https://www.facebook.com/pvindustriesAUS", icon: "facebook" },
    { name: "Instagram", url: "https://www.instagram.com/pv_industries", icon: "instagram" },
    { name: "LinkedIn", url: "https://www.linkedin.com/company/pv-industries/", icon: "linkedin" }
  ]
};
---

<section id="contact" class="contact-section">
  <div class="container">
    <div class="contact-grid">
      <!-- Contact Form -->
      <div class="contact-form-column">
        <ContactForm />
      </div>

      <!-- Contact Information -->
      <div class="contact-info-column">
        <div class="contact-info-content">
          <div class="info-header">
            <h2 class="contact-title">{contactData.title}</h2>
            {contactData.description && (
              <p class="contact-description">{contactData.description}</p>
            )}
          </div>

          <div class="contact-details">
            <!-- Email Contact -->
            <div class="contact-block">
              <div class="contact-block-header">
                <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <h3 class="contact-block-title">Contact us</h3>
              </div>
              <div class="contact-block-content">
                <p class="contact-text">
                  Email: <a href={`mailto:${contactData.email}`} class="contact-link">{contactData.email}</a>
                </p>
              </div>
            </div>

            <!-- Locations -->
            <div class="contact-block">
              <div class="contact-block-header">
                <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M21 10C21 17 12 23 12 23S3 17 3 10C3 5.02944 7.02944 1 12 1C16.9706 1 21 5.02944 21 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <h3 class="contact-block-title">Locations</h3>
              </div>
              <div class="contact-block-content">
                {contactData.locations.map((location) => (
                  <p class="location-text">{location}</p>
                ))}
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="social-section">
            <h3 class="social-title">Follow us on</h3>
            <div class="social-links">
              {contactData.socialLinks.map((social) => (
                <a 
                  href={social.url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="social-link"
                  aria-label={`Follow us on ${social.name}`}
                >
                  {social.icon === 'facebook' && (
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                      <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  )}
                  {social.icon === 'instagram' && (
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                      <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
                      <path d="M16 11.37C16.1234 12.2022 15.9813 13.0522 15.5938 13.799C15.2063 14.5458 14.5931 15.1514 13.8416 15.5297C13.0901 15.9079 12.2384 16.0396 11.4078 15.9059C10.5771 15.7723 9.80976 15.3801 9.21484 14.7852C8.61992 14.1902 8.22773 13.4229 8.09407 12.5922C7.9604 11.7615 8.09207 10.9099 8.47033 10.1584C8.84859 9.40685 9.45418 8.79374 10.201 8.40624C10.9478 8.01874 11.7978 7.87658 12.63 8C13.4789 8.12588 14.2649 8.52146 14.8717 9.1283C15.4785 9.73515 15.8741 10.5211 16 11.37Z" stroke="currentColor" stroke-width="2"/>
                      <path d="M17.5 6.5H17.51" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  )}
                  {social.icon === 'linkedin' && (
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                      <path d="M16 8C17.5913 8 19.1174 8.63214 20.2426 9.75736C21.3679 10.8826 22 12.4087 22 14V21H18V14C18 13.4696 17.7893 12.9609 17.4142 12.5858C17.0391 12.2107 16.5304 12 16 12C15.4696 12 14.9609 12.2107 14.5858 12.5858C14.2107 12.9609 14 13.4696 14 14V21H10V14C10 12.4087 10.6321 10.8826 11.7574 9.75736C12.8826 8.63214 14.4087 8 16 8V8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <rect x="2" y="9" width="4" height="12" stroke="currentColor" stroke-width="2"/>
                      <circle cx="4" cy="4" r="2" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  )}
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Divider -->
        <div class="contact-divider"></div>
      </div>
    </div>
  </div>
  
  <!-- Section Background -->
  <div id="HomeContact" class="section-background"></div>
</section>

<style>
  .contact-section {
    position: relative;
    padding: var(--space-20) 0;
    background: var(--color-neutral-900);
    color: var(--color-neutral-100);
    overflow: hidden;
  }

  .section-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #0f172a;
    z-index: -1;
  }

  .contact-grid {
    display: grid;
    gap: var(--space-12);
    align-items: start;
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr 525px;
      gap: var(--space-16);
    }
  }

  /* Contact Form */
  .contact-form-column {
    order: 2;
  }

  @media (min-width: 1024px) {
    .contact-form-column {
      order: 1;
    }
  }


  /* Contact Information */
  .contact-info-column {
    order: 1;
    position: relative;
  }

  @media (min-width: 1024px) {
    .contact-info-column {
      order: 2;
    }
  }

  .contact-info-content {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }

  .info-header {
    margin-bottom: var(--space-12);
  }

  .contact-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin: 0 0 var(--space-4) 0;
    max-width: 450px;
  }

  @media (min-width: 768px) {
    .contact-title {
      max-width: 550px;
    }
  }

  @media (min-width: 1024px) {
    .contact-title {
      max-width: 350px;
    }
  }

  .contact-description {
    color: var(--color-neutral-300);
    line-height: 1.6;
    margin: 0;
  }

  /* Contact Details */
  .contact-details {
    margin-bottom: var(--space-12);
  }

  .contact-block {
    margin-bottom: var(--space-8);
  }

  .contact-block:last-child {
    margin-bottom: 0;
  }

  .contact-block-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .contact-icon {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .contact-block-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin: 0;
  }

  .contact-block-content {
    color: var(--color-neutral-500);
  }

  .contact-text,
  .location-text {
    margin: 0;
    line-height: 1.6;
  }

  .contact-link {
    color: var(--color-neutral-100);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .contact-link:hover {
    color: var(--color-primary);
  }

  /* Social Links */
  .social-section {
    margin-top: var(--space-12);
  }

  .social-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin: 0 0 var(--space-4) 0;
  }

  .social-links {
    display: flex;
    gap: var(--space-4);
  }

  .social-link {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-300);
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .social-link:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-neutral-100);
    transform: translateY(-2px);
  }

  /* Contact Divider */
  .contact-divider {
    position: absolute;
    top: 0;
    right: 0;
    width: 1px;
    height: 100%;
    background: var(--color-neutral-600);
    display: none;
  }

  @media (min-width: 1024px) {
    .contact-divider {
      display: block;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .contact-section {
      padding: var(--space-16) 0;
    }

    .contact-grid {
      gap: var(--space-8);
    }


    .info-header {
      margin-bottom: var(--space-8);
    }

    .contact-details {
      margin-bottom: var(--space-8);
    }
  }

  /* Animation preferences */
  @media (prefers-reduced-motion: reduce) {
    .contact-info-content {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .social-link:hover {
      transform: none;
    }
  }
</style>