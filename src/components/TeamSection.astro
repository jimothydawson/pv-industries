---
// Props interface
export interface Props {
  sectionNumber?: string;
}

// Get props with default value
const { sectionNumber = "01" } = Astro.props;

// Team section component
const sectionData = {
  subtitle: sectionNumber.toString().padStart(2, '0'),
  title: "Meet the team",
  description: "Our team is dedicated to leading solar panel recycling in Australia.",
  emptyStateMessage: "No team members found."
};

const teamMembers = [
  {
    name: "James Petesic",
    role: "Co-Founder",
    image: "/images/team/james-petesic.jpg",
    social: {
      linkedin: "https://www.linkedin.com/in/james-petesic-b2098491/",
      email: "#"
    }
  },
  {
    name: "Timothy Dawson",
    role: "Co-Founder",
    image: "/images/team/timothy-dawson.jpg",
    social: {
      linkedin: "https://www.linkedin.com/in/timothydawsonau/",
      email: "#"
    }
  },
  {
    name: "Tom Witheridge",
    role: "Head of Engineering & Operations",
    image: "/images/team/tom-witheridge.jpg",
    social: {
      linkedin: "https://www.linkedin.com/in/thomas-witheridge-a1b19664/",
      email: "#"
    }
  }
];
---

<section class="team-section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-content">
        <h2 class="section-title">{sectionData.title}</h2>
      </div>
    </div>

    <!-- Team Grid -->
    <div class="team-grid">
      {teamMembers.length > 0 ? (
        <div class="team-member-grid">
          {teamMembers.map((member) => (
            <div class="team-member-card">
              <div class="team-member-image">
                <img
                  src={member.image}
                  alt={member.name}
                  loading="lazy"
                />
              </div>
              <div class="team-member-content">
                <div class="team-member-info">
                  <h3 class="team-member-name">{member.name}</h3>
                  <p class="team-member-role">{member.role}</p>
                </div>
                <div class="team-member-social">
                  {member.social.linkedin && (
                    <a href={member.social.linkedin} target="_blank" rel="noopener noreferrer" class="social-link" aria-label={`${member.name} LinkedIn`}>
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-message">
            <p>{sectionData.emptyStateMessage}</p>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .team-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-200);
  }

  /* Section Header */
  .section-header {
    margin-bottom: var(--space-12);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  @media (max-width: 767px) {
    .section-header {
      max-width: 450px;
    }
  }

  .header-content {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }


  .section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    line-height: 1.2;
    margin: 0;
  }

  /* Team Grid */
  .team-grid {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.3s forwards;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-16) var(--space-8);
    background: var(--color-neutral-100);
    border-radius: var(--radius-lg);
    border: 2px dashed var(--color-neutral-300);
  }

  .empty-message p {
    color: var(--color-neutral-500);
    font-size: var(--font-size-lg);
    margin: 0;
  }

  /* Team Member Card Styles (for future use) */
  .team-member-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }

  @media (max-width: 767px) {
    .team-member-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  .team-member-card {
    background: var(--color-neutral-100);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
  }

  .team-member-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .team-member-image {
    width: 100%;
    height: 300px;
    background: var(--color-neutral-200);
    overflow: hidden;
  }

  .team-member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .team-member-card:hover .team-member-image img {
    transform: scale(1.05);
  }

  .team-member-content {
    padding: var(--space-6);
  }

  .team-member-info {
    margin-bottom: var(--space-4);
  }

  .team-member-name {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: 0 0 var(--space-1);
    text-decoration: none;
  }

  .team-member-name:hover {
    color: var(--color-primary);
  }

  .team-member-role {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
  }

  .team-member-social {
    display: flex;
    gap: var(--space-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--color-neutral-200);
    border-radius: var(--radius-md);
    color: var(--color-neutral-600);
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .social-link:hover {
    background: var(--color-primary);
    color: var(--color-neutral-100);
    transform: translateY(-2px);
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .team-section {
      padding: var(--space-16) 0;
    }

    .section-header {
      margin-bottom: var(--space-10);
    }

    .empty-state {
      padding: var(--space-12) var(--space-6);
    }

    .empty-message p {
      font-size: var(--font-size-base);
    }
  }

  /* Animation preferences */
  @media (prefers-reduced-motion: reduce) {
    .header-content,
    .team-grid {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .team-member-card:hover {
      transform: none;
    }

    .team-member-card:hover .team-member-image img {
      transform: none;
    }

    .social-link:hover {
      transform: none;
    }
  }
</style>