---
// Marketing Industry Solutions section following the exact marketing document structure
import HomeIcon from './icons/HomeIcon.astro';
import EnergyIcon from './icons/EnergyIcon.astro';
import GovernmentIcon from './icons/GovernmentIcon.astro';
import HandshakeIcon from './icons/HandshakeIcon.astro';

const industrySolutionsData = {
  h2: "Industry-Specific Solutions",
  h3: "Tailored services for:",
  solutions: [
    {
      title: "Commercial and residential solar installers",
      linkTo: "/installers",
      icon: "home"
    },
    {
      title: "Utility-scale solar farm operators",
      linkTo: "/utility-providers",
      icon: "energy"
    },
    {
      title: "Local, state, and federal government agencies",
      linkTo: "/government",
      icon: "government"
    },
    {
      title: "Recycling and manufacturing partners",
      linkTo: "/partners",
      icon: "handshake"
    }
  ]
};
---

<section class="industry-solutions-section" id="industry-solutions">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{industrySolutionsData.h2}</h2>
      <h3 class="section-subtitle">{industrySolutionsData.h3}</h3>
    </div>
    
    <div class="solutions-grid">
      {industrySolutionsData.solutions.map((solution, index) => (
        <a href={solution.linkTo} class="solution-card" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="solution-icon">
            {solution.icon === "home" && <HomeIcon />}
            {solution.icon === "energy" && <EnergyIcon />}
            {solution.icon === "government" && <GovernmentIcon />}
            {solution.icon === "handshake" && <HandshakeIcon />}
          </div>
          
          <div class="solution-content">
            <h4 class="solution-title">{solution.title}</h4>
            <div class="solution-arrow">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .industry-solutions-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-100);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-4);
    animation: fadeInUp 0.8s ease-out;
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-600);
    margin-bottom: 0;
    font-weight: 500;
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .solutions-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8);
    }
  }

  .solution-card {
    background: var(--color-neutral-50);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    border: 1px solid var(--color-neutral-200);
    transition: all var(--transition-normal);
    display: flex;
    align-items: center;
    gap: var(--space-4);
    text-decoration: none;
    color: inherit;
  }

  .solution-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-color: var(--color-primary-light);
  }

  .solution-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-100);
    flex-shrink: 0;
  }

  .solution-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
  }

  .solution-title {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: 0;
    line-height: 1.4;
  }

  .solution-arrow {
    color: var(--color-primary);
    transition: transform var(--transition-normal);
    flex-shrink: 0;
  }

  .solution-card:hover .solution-arrow {
    transform: translateX(4px);
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .solutions-grid {
      gap: var(--space-4);
    }
    
    .solution-card {
      padding: var(--space-5);
    }
    
    .solution-icon {
      width: 40px;
      height: 40px;
    }
    
    .solution-title {
      font-size: var(--font-size-sm);
    }
  }
</style>