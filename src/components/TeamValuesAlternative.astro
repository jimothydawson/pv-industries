---
// Props interface
export interface Props {
  sectionNumber?: string;
}

// Get props with default value
const { sectionNumber = "03" } = Astro.props;

// Team Values Section component - "What We Value as a Team" - Timeline Style
const sectionData = {
  subtitle: sectionNumber.toString().padStart(2, '0'),
  title: "What We Value as a Team",
  description: "Our culture is shaped by shared values that guide how we work with each other, with our customers, and with the environment.",
  timelineValues: [
    {
      number: "01",
      title: "Trust & Transparency",
      description: "We believe in honest communication, integrity, and accountabilityâ€”from our warehouse floor to boardroom meetings.",
      highlight: "Open dialogue builds stronger partnerships"
    },
    {
      number: "02",
      title: "Innovation",
      description: "Our team embraces new technologies and smarter ways of working to stay at the forefront of solar panel recycling.",
      highlight: "Always looking for the next breakthrough"
    },
    {
      number: "03",
      title: "Customer Focus",
      description: "Every department at PV Industries is focused on helping our customers succeed and meeting their sustainability goals.",
      highlight: "Your success drives our mission"
    },
    {
      number: "04",
      title: "Respect & Teamwork",
      description: "We foster a positive, inclusive, and collaborative environment where everyone is heard, supported, and empowered to make an impact.",
      highlight: "Every voice matters, every contribution counts"
    }
  ],
  missionStatement: {
    title: "Faces Behind the Mission",
    description: "While we come from different backgrounds, we're united by one mission: To lead Australia in solar panel recycling and circular economy solutions.",
    teamMembers: [
      {
        name: "James Petesic",
        role: "Co-Founder",
        image: "/images/team/james-petesic.jpg"
      },
      {
        name: "Timothy Dawson",
        role: "Co-Founder",
        image: "/images/team/timothy-dawson.jpg"
      },
      {
        name: "Tom Witheridge",
        role: "Head of Engineering & Operations",
        image: "/images/team/tom-witheridge.jpg"
      }
    ],
    activities: [
      "Coordinating logistics from our Sydney HQ",
      "Conducting site assessments in the field", 
      "Processing materials at our recycling facilities",
      "Collaborating with clients on custom recycling strategies",
      "Working behind the scenes to improve safety, compliance, and sustainability"
    ]
  }
};
---

<section class="team-values-timeline" id="values">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-content">
        <h2 class="section-title">{sectionData.title}</h2>
        <p class="section-description">{sectionData.description}</p>
      </div>
    </div>

    <!-- Timeline -->
    <div class="timeline-container">
      <div class="timeline-line"></div>
      
      {sectionData.timelineValues.map((value, index) => (
        <div class="timeline-item" style={`animation-delay: ${index * 0.3}s`}>
          <div class="timeline-marker">
            <div class="marker-number">{value.number}</div>
          </div>
          
          <div class="timeline-content">
            <div class="content-card">
              <h3 class="value-title">{value.title}</h3>
              <p class="value-description">{value.description}</p>
              <div class="value-highlight">
                <span class="highlight-text">"{value.highlight}"</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Mission Statement -->
    <div class="mission-section">
      <div class="mission-card">
        <div class="mission-header">
          <h3 class="mission-title">{sectionData.missionStatement.title}</h3>
          <p class="mission-description">{sectionData.missionStatement.description}</p>
        </div>
        
        <!-- Team Photos -->
        <div class="mission-team">
          <div class="team-photos">
            {sectionData.missionStatement.teamMembers.map((member, index) => (
              <div class="team-photo" style={`animation-delay: ${0.1 * index + 0.8}s`}>
                <img src={member.image} alt={member.name} loading="lazy" />
                <div class="team-photo-overlay">
                  <span class="team-member-name">{member.name}</span>
                  <span class="team-member-role">{member.role}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="mission-activities">
          <h4 class="activities-title">You'll find us:</h4>
          <div class="activities-grid">
            {sectionData.missionStatement.activities.map((activity, index) => (
              <div class="activity-item" style={`animation-delay: ${0.1 * index + 1.2}s`}>
                <div class="activity-icon">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                    <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <span class="activity-text">{activity}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .team-values-timeline {
    padding: var(--space-20) 0;
    background: var(--color-neutral-900);
    color: var(--color-neutral-100);
    position: relative;
    overflow: hidden;
  }

  /* Background pattern */
  .team-values-timeline::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 2;
  }

  .header-content {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--color-neutral-100);
    line-height: 1.2;
    margin: 0 0 var(--space-6);
  }

  .section-description {
    font-size: var(--font-size-xl);
    color: var(--color-neutral-300);
    line-height: 1.6;
    margin: 0;
  }

  /* Timeline */
  .timeline-container {
    max-width: 900px;
    margin: 0 auto var(--space-20);
    position: relative;
    z-index: 2;
  }

  .timeline-line {
    position: absolute;
    left: 60px;
    top: 80px;
    bottom: 80px;
    width: 3px;
    background: linear-gradient(
      to bottom,
      transparent,
      var(--color-primary) 10%,
      var(--color-primary) 90%,
      transparent
    );
    border-radius: 2px;
  }

  .timeline-item {
    position: relative;
    padding-left: 140px;
    margin-bottom: var(--space-16);
    opacity: 0;
    transform: translateX(-30px);
    animation: slideInLeft 0.8s ease-out forwards;
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: 40px;
    top: 20px;
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4px solid var(--color-neutral-900);
    z-index: 3;
  }

  .marker-number {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--color-neutral-100);
  }

  .timeline-content {
    position: relative;
  }

  .content-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    transition: all var(--transition-normal);
  }

  .content-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .value-title {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin: 0 0 var(--space-4);
  }

  .value-description {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-300);
    line-height: 1.6;
    margin: 0 0 var(--space-6);
  }

  .value-highlight {
    padding: var(--space-4);
    background: rgba(var(--color-primary-rgb), 0.1);
    border-left: 4px solid var(--color-primary);
    border-radius: var(--radius-sm);
  }

  .highlight-text {
    font-style: italic;
    color: var(--color-primary);
    font-size: var(--font-size-base);
    font-weight: 500;
  }

  /* Mission Statement */
  .mission-section {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .mission-card {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.03) 100%);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-xl);
    padding: var(--space-12);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 1s forwards;
  }

  .mission-header {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .mission-title {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin: 0 0 var(--space-4);
  }

  .mission-description {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-300);
    line-height: 1.6;
    margin: 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Mission Team Photos */
  .mission-team {
    margin: var(--space-10) 0;
  }

  .team-photos {
    display: flex;
    justify-content: center;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .team-photo {
    position: relative;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--color-primary);
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
    transition: all var(--transition-normal);
  }

  .team-photo:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .team-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .team-photo:hover img {
    transform: scale(1.1);
  }

  .team-photo-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    padding: var(--space-2) var(--space-1);
    text-align: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .team-photo:hover .team-photo-overlay {
    opacity: 1;
  }

  .team-member-name {
    display: block;
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin-bottom: var(--space-1);
  }

  .team-member-role {
    display: block;
    font-size: var(--font-size-xs);
    color: var(--color-primary);
  }

  .mission-activities {
    text-align: center;
    margin-top: var(--space-8);
  }

  .activities-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-neutral-100);
    margin: 0 0 var(--space-8);
  }

  .activities-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-width: 600px;
    margin: 0 auto;
  }

  .activity-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-sm);
    transition: all var(--transition-normal);
    opacity: 0;
    transform: translateY(10px);
    animation: fadeInUp 0.5s ease-out forwards;
  }

  .activity-item:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .activity-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-100);
  }

  .activity-text {
    font-size: var(--font-size-base);
    color: var(--color-neutral-300);
    text-align: left;
  }

  /* Mobile Responsiveness */
  @media (max-width: 1024px) {
    .timeline-line {
      left: 30px;
    }

    .timeline-item {
      padding-left: 80px;
    }

    .timeline-marker {
      left: 10px;
    }
  }

  @media (max-width: 767px) {
    .team-values-timeline {
      padding: var(--space-16) 0;
    }

    .section-header {
      margin-bottom: var(--space-12);
    }

    .timeline-container {
      margin-bottom: var(--space-16);
    }

    .timeline-line {
      left: 20px;
    }

    .timeline-item {
      padding-left: 60px;
      margin-bottom: var(--space-12);
    }

    .timeline-marker {
      left: 0;
      width: 32px;
      height: 32px;
    }

    .marker-number {
      font-size: var(--font-size-xs);
    }

    .content-card {
      padding: var(--space-6);
    }

    .mission-card {
      padding: var(--space-8);
    }

    .activities-grid {
      max-width: 100%;
    }
  }

  /* Animation preferences */
  @media (prefers-reduced-motion: reduce) {
    .header-content,
    .timeline-item,
    .mission-card,
    .activity-item {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .content-card:hover {
      transform: none;
    }
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>