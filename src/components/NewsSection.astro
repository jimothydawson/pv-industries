---
// News section data
const sectionData = {
  subtitle: "07",
  title: "News & articles",
  description: "",
  browseAllLink: "/news",
  articles: [
    {
      id: 1,
      title: "Solar Panel Recycling: A Growing Industry",
      excerpt: "As solar installations reach end-of-life, recycling becomes crucial for sustainability.",
      category: "Industry News",
      date: "March 15, 2024",
      image: "/images/article-1.jpg",
      link: "/news/solar-panel-recycling-growing-industry"
    },
    {
      id: 2,
      title: "Government Grants Support Green Technology",
      excerpt: "New funding opportunities for sustainable waste management solutions.",
      category: "Grants",
      date: "March 10, 2024",
      image: "/images/article-2.jpg",
      link: "/news/government-grants-green-technology"
    },
    {
      id: 3,
      title: "PV Industries Expands Operations",
      excerpt: "Opening new facilities to meet growing demand for solar panel recycling.",
      category: "Company News",
      date: "March 5, 2024",
      image: "/images/article-3.jpg",
      link: "/news/pv-industries-expands-operations"
    }
  ]
};
---

<section class="news-section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-content">
        <div class="subtitle-wrapper">
          <div class="subtitle-divider left"></div>
          <div class="subtitle">{sectionData.subtitle}</div>
          <div class="subtitle-divider"></div>
        </div>
        <h2 class="section-title">{sectionData.title}</h2>
        {sectionData.description && (
          <div class="section-description">
            <p>{sectionData.description}</p>
          </div>
        )}
      </div>
    </div>

    <!-- Articles Grid -->
    <div class="articles-grid">
      {sectionData.articles.map((article, index) => (
        <article class="article-card" style={`animation-delay: ${index * 0.1}s`}>
          <a href={article.link} class="article-link">
            <div class="article-top">
              <div class="article-category">
                <span class="category-label">{article.category}</span>
              </div>
              <div class="article-image">
                <img 
                  src={article.image} 
                  alt={article.title}
                  loading="lazy"
                />
              </div>
            </div>
            <div class="article-bottom">
              <div class="article-content">
                <h3 class="article-title">{article.title}</h3>
                <div class="article-excerpt">
                  <p>{article.excerpt}</p>
                </div>
              </div>
              <div class="article-meta">
                <time class="article-date">{article.date}</time>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    <!-- Browse All Button -->
    <div class="section-actions">
      <div class="actions-wrapper">
        <a href={sectionData.browseAllLink} class="button button-secondary dark">
          Browse all articles
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .news-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-100);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .header-content {
    max-width: 100%;
  }

  .subtitle-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .subtitle {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .subtitle-divider {
    height: 2px;
    background: var(--color-primary);
    width: 60px;
  }

  .subtitle-divider.left {
    width: 60px;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    line-height: 1.2;
    margin: 0;
  }

  .section-description {
    margin-top: var(--space-4);
  }

  .section-description p {
    color: var(--color-neutral-600);
    line-height: 1.6;
    margin: 0;
  }

  /* Articles Grid */
  .articles-grid {
    display: grid;
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  @media (min-width: 768px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .article-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .article-link {
    display: block;
    background: var(--color-neutral-100);
    border: 1px solid var(--color-neutral-200);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-normal);
    height: 100%;
  }

  .article-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-neutral-300);
  }

  .article-top {
    position: relative;
  }

  .article-category {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    z-index: 2;
  }

  .category-label {
    background: var(--color-primary);
    color: var(--color-neutral-100);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .article-image {
    aspect-ratio: 16 / 10;
    background: var(--color-neutral-200);
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .article-link:hover .article-image img {
    transform: scale(1.05);
  }

  .article-bottom {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    flex: 1;
  }

  .article-content {
    flex: 1;
  }

  .article-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: 0 0 var(--space-3) 0;
    line-height: 1.3;
  }

  .article-excerpt p {
    color: var(--color-neutral-600);
    line-height: 1.6;
    margin: 0;
  }

  .article-meta {
    border-top: 1px solid var(--color-neutral-200);
    padding-top: var(--space-4);
  }

  .article-date {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-neutral-500);
    text-transform: uppercase;
  }

  /* Section Actions */
  .section-actions {
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out 0.4s forwards;
  }

  .actions-wrapper {
    display: flex;
    justify-content: center;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .news-section {
      padding: var(--space-16) 0;
    }

    .section-header {
      margin-bottom: var(--space-12);
    }

    .articles-grid {
      margin-bottom: var(--space-12);
    }

    .button {
      justify-content: center;
      min-width: 200px;
    }
  }

  /* Animation preferences */
  @media (prefers-reduced-motion: reduce) {
    .section-header,
    .article-card,
    .section-actions {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .article-link:hover {
      transform: none;
    }

    .article-link:hover .article-image img {
      transform: none;
    }

    .footer-social .social-link:hover {
      transform: none;
    }
  }
</style>