---
// Props interface
export interface Props {
  sectionNumber?: string;
}

// Get props with default value
const { sectionNumber = "07" } = Astro.props;

// Import components
import ArticleCard from './ArticleCard.astro';

// Import blog data
import blogData from '../data/blog-posts.json';

// Get the latest 3 articles
const latestArticles = blogData.posts
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 3);

// News section data
const sectionData = {
  subtitle: sectionNumber.toString().padStart(2, '0'),
  title: "News & articles",
  description: "",
  browseAllLink: "/articles"
};
---

<section class="news-section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-content">
        <div class="subtitle-wrapper">
          <div class="subtitle-divider left"></div>
          <div class="subtitle">{sectionData.subtitle}</div>
          <div class="subtitle-divider"></div>
        </div>
        <h2 class="section-title">{sectionData.title}</h2>
        {sectionData.description && (
          <div class="section-description">
            <p>{sectionData.description}</p>
          </div>
        )}
      </div>
    </div>

    <!-- Articles Grid -->
    <div class="articles-grid">
      {latestArticles.map((article, index) => (
        <div class="article-wrapper" style={`animation-delay: ${index * 0.1}s`}>
          <ArticleCard article={{
            id: index + 1,
            title: article.title,
            excerpt: article.description,
            image: article.heroImage,
            category: article.category,
            date: article.date,
            readTime: article.readTime,
            slug: article.id
          }} />
        </div>
      ))}
    </div>

    <!-- Browse All Button -->
    <div class="section-actions">
      <div class="actions-wrapper">
        <a href={sectionData.browseAllLink} class="button button-secondary dark">
          Browse all articles
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .news-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-100);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .header-content {
    max-width: 100%;
  }

  .subtitle-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .subtitle {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .subtitle-divider {
    height: 2px;
    background: var(--color-primary);
    width: 60px;
  }

  .subtitle-divider.left {
    width: 60px;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    line-height: 1.2;
    margin: 0;
  }

  .section-description {
    margin-top: var(--space-4);
  }

  .section-description p {
    color: var(--color-neutral-600);
    line-height: 1.6;
    margin: 0;
  }

  /* Articles Grid */
  .articles-grid {
    display: grid;
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  @media (min-width: 768px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .article-wrapper {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  /* Section Actions */
  .section-actions {
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out 0.4s forwards;
  }

  .actions-wrapper {
    display: flex;
    justify-content: center;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .news-section {
      padding: var(--space-16) 0;
    }

    .section-header {
      margin-bottom: var(--space-12);
    }

    .articles-grid {
      margin-bottom: var(--space-12);
    }

    .button {
      justify-content: center;
      min-width: 200px;
    }
  }

  /* Animation preferences */
  @media (prefers-reduced-motion: reduce) {
    .section-header,
    .article-wrapper,
    .section-actions {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>