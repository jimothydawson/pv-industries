---
import TruckIcon from './icons/TruckIcon.astro';

// Core Services section data
const servicesData = {
  title: "Our Core Services",
  subtitle: "Comprehensive Solar Panel Recycling Solutions",
  description: "From collection to material recovery, we provide end-to-end solar panel recycling services that support Australia's transition to a circular economy.",
  services: [
    {
      icon: "recycle",
      title: "Solar Panel Recycling",
      description: "Advanced processing technology that recovers up to 95% of materials from end-of-life solar panels, including silicon, silver, aluminum, and glass.",
      features: [
        "95% material recovery rate",
        "Zero landfill guarantee",
        "Certified destruction processes",
        "Detailed reporting and certificates"
      ]
    },
    {
      icon: "truck",
      title: "National Collection & Logistics",
      description: "Nationwide pickup and transportation services with specialized handling for solar panels, ensuring safe and efficient collection from any location.",
      features: [
        "Australia-wide coverage",
        "Specialized transport vehicles",
        "Flexible scheduling",
        "Bulk collection services"
      ]
    },
    {
      icon: "materials",
      title: "Clean Material Recovery",
      description: "High-purity material extraction that meets industry standards for reuse in new solar panels and other applications, closing the circular economy loop.",
      features: [
        "Industry-grade purity levels",
        "Quality certification",
        "Supply chain integration",
        "Sustainable material sourcing"
      ]
    }
  ]
};
---

<section class="core-services-section" id="core-services">
  <div class="container">
    <div class="services-header">
      <h2 class="services-title">{servicesData.title}</h2>
      <h3 class="services-subtitle">{servicesData.subtitle}</h3>
      <p class="services-description">{servicesData.description}</p>
    </div>
    
    <div class="services-grid">
      {servicesData.services.map((service, index) => (
        <div class="service-card" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="service-icon">
            {service.icon === "recycle" && (
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M7 6H17L19.5 3.5L21 5L19 7H7L5 5L6.5 3.5L7 6Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M17 6V16C17 17.1 16.1 18 15 18H9C7.9 18 7 17.1 7 16V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M10 11V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M14 11V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            )}
            {service.icon === "truck" && (
              <TruckIcon width="48" height="48" />
            )}
            {service.icon === "materials" && (
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            )}
          </div>
          
          <div class="service-content">
            <h4 class="service-title">{service.title}</h4>
            <p class="service-description">{service.description}</p>
            
            <ul class="service-features">
              {service.features.map((feature) => (
                <li class="service-feature">
                  <svg class="feature-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M13.5 4.5L6 12L2.5 8.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
    
    <div class="services-cta">
      <a href="#HomeContact" class="button button-primary">
        Get Started Today
        <svg class="button-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      <a href="/about" class="button button-secondary">
        Learn More About Our Process
      </a>
    </div>
  </div>
</section>

<style>
  .core-services-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-50);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .services-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .services-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-4);
    animation: fadeInUp 0.8s ease-out;
  }

  .services-subtitle {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--space-6);
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .services-description {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-600);
    line-height: 1.6;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    background: var(--color-neutral-100);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all var(--transition-normal);
    border: 1px solid var(--color-neutral-200);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: var(--color-primary-light);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-6);
    color: var(--color-neutral-100);
    flex-shrink: 0;
  }

  .service-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-4);
  }

  .service-description {
    font-size: var(--font-size-base);
    color: var(--color-neutral-600);
    line-height: 1.6;
    margin-bottom: var(--space-6);
    flex: 1;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-feature {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
    font-size: var(--font-size-sm);
    color: var(--color-neutral-700);
  }

  .service-feature:last-child {
    margin-bottom: 0;
  }

  .feature-icon {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .services-cta {
    text-align: center;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  .services-cta .button {
    margin: 0 var(--space-2) var(--space-4) var(--space-2);
  }

  @media (max-width: 640px) {
    .services-cta {
      display: flex;
      flex-direction: column;
      gap: var(--space-4);
    }
    
    .services-cta .button {
      margin: 0;
    }
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>