---
// Main Partners Overview Section with three-column flexbox grid
const partnersData = {
  h1: "Our Partners in Circular Innovation",
  h2: "Supplying Clean, High-Quality Materials for Remanufacturing and Sustainable Product Development",
  body: "Through our advanced solar panel processing and material recovery systems, we supply clean, high-grade raw materials to innovative partners who remanufacture these materials into new products.",
  
  weProvide: [
    { material: "Clean Glass", description: "High-quality glass suitable for remanufacturing" },
    { material: "Refined Aluminium", description: "Clean aluminium ready for secondary processing" },
    { material: "Silicon", description: "Recovered silicon for industrial applications" },
    { material: "Copper & Metals", description: "Electrical components and wiring materials" },
    { material: "Steel & Framing", description: "Structural materials for construction use" }
  ],
  
  toIndustries: [
    { industry: "Manufacturing", description: "Industrial and construction material producers" },
    { industry: "Construction", description: "Building and infrastructure companies" },
    { industry: "Electronics", description: "Component and device manufacturers" },
    { industry: "Packaging", description: "Sustainable packaging solutions" },
    { industry: "Renewable Tech", description: "Clean energy technology companies" }
  ],
  
  forApplications: [
    { application: "Building Materials", description: "Tiles, insulation, and construction products" },
    { application: "Construction & Packaging", description: "Structural and packaging solutions" },
    { application: "Industrial Processes", description: "Manufacturing and processing applications" },
    { application: "Electrical Components", description: "Wiring and electronic applications" },
    { application: "Structural Applications", description: "Framework and support systems" }
  ]
};
---

<section class="partners-main-section" id="partners-overview">
  <div class="container">
    <!-- Header -->
    <div class="section-header">
      <h1 class="main-title">{partnersData.h1}</h1>
      <h2 class="subtitle">{partnersData.h2}</h2>
      <p class="intro-text">{partnersData.body}</p>
    </div>
    
    <!-- Three Column Grid -->
    <div class="partners-grid">
      <!-- We Provide Column -->
      <div class="grid-column provide-column">
        <div class="column-header">
          <div class="header-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M20 7L12 3L4 7M20 7L12 11M20 7V17L12 21M12 11L4 7M12 11V21M4 7V17L12 21" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="column-title">Materials We Provide</h3>
        </div>
        
        <div class="items-list">
          {partnersData.weProvide.map((item, index) => (
            <div class="list-item" style={`--delay: ${index * 0.1}s`}>
              <div class="item-content">
                <h4 class="item-title">{item.material}</h4>
                <p class="item-description">{item.description}</p>
              </div>
              <div class="item-indicator"></div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- To Industries Column -->
      <div class="grid-column industries-column">
        <div class="column-header">
          <div class="header-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2"/>
              <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <h3 class="column-title">Sectors We Serve</h3>
        </div>
        
        <div class="items-list">
          {partnersData.toIndustries.map((item, index) => (
            <div class="list-item" style={`--delay: ${index * 0.1 + 0.2}s`}>
              <div class="item-content">
                <h4 class="item-title">{item.industry}</h4>
                <p class="item-description">{item.description}</p>
              </div>
              <div class="item-indicator"></div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- For Applications Column -->
      <div class="grid-column applications-column">
        <div class="column-header">
          <div class="header-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="column-title">Material Use Cases</h3>
        </div>
        
        <div class="items-list">
          {partnersData.forApplications.map((item, index) => (
            <div class="list-item" style={`--delay: ${index * 0.1 + 0.4}s`}>
              <div class="item-content">
                <h4 class="item-title">{item.application}</h4>
                <p class="item-description">{item.description}</p>
              </div>
              <div class="item-indicator"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
    
  </div>
</section>

<style>
  .partners-main-section {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, #f8fafc, #f1f5f9);
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-20);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .main-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--color-neutral-900);
    margin: 0 0 var(--space-6);
    line-height: 1.2;
  }

  .subtitle {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    color: var(--color-neutral-700);
    font-weight: 500;
    margin: 0 0 var(--space-6);
    line-height: 1.4;
  }

  .intro-text {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-600);
    line-height: 1.6;
    margin: 0;
  }

  /* Partners Grid */
  .partners-grid {
    display: flex;
    gap: var(--space-8);
    align-items: flex-start;
    position: relative;
  }

  .grid-column {
    flex: 1;
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--color-neutral-200);
    position: relative;
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(40px);
  }

  .provide-column {
    animation-delay: 0.1s;
    border-top: 4px solid var(--color-primary);
  }

  .industries-column {
    animation-delay: 0.3s;
    border-top: 4px solid var(--color-primary);
  }

  .applications-column {
    animation-delay: 0.5s;
    border-top: 4px solid var(--color-primary);
  }

  /* Column Headers */
  .column-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    border-bottom: 2px solid var(--color-neutral-100);
  }

  .header-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .provide-column .header-icon,
  .industries-column .header-icon,
  .applications-column .header-icon {
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
  }

  .column-title {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: 0;
  }

  /* Items List */
  .items-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .list-item {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  .list-item:hover {
    background: var(--color-neutral-50);
    transform: translateX(8px);
  }

  .item-content {
    flex: 1;
  }

  .item-title {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: 0 0 var(--space-1);
  }

  .item-description {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-600);
    margin: 0;
    line-height: 1.4;
  }

  .item-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-primary);
    flex-shrink: 0;
    opacity: 0.6;
    transition: all 0.3s ease;
  }

  .list-item:hover .item-indicator {
    opacity: 1;
    transform: scale(1.2);
  }


  /* Animations */
  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }


  /* Mobile Responsiveness */
  @media (max-width: 1023px) {
    .partners-grid {
      flex-direction: column;
      gap: var(--space-12);
    }


    .grid-column {
      padding: var(--space-6);
    }

    .column-header {
      flex-direction: column;
      text-align: center;
      gap: var(--space-3);
    }

    .header-icon {
      width: 56px;
      height: 56px;
    }
  }

  @media (max-width: 767px) {
    .partners-main-section {
      padding: var(--space-16) 0;
    }

    .section-header {
      margin-bottom: var(--space-16);
    }

    .partners-grid {
      gap: var(--space-8);
    }

    .grid-column {
      padding: var(--space-5);
    }

    .list-item:hover {
      transform: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .grid-column,
    .list-item {
      animation: none;
      opacity: 1;
      transform: none;
    }


    .list-item:hover {
      transform: none;
    }
  }
</style>