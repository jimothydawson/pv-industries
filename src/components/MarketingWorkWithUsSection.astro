---
// Marketing Work With Us CTA section following the exact marketing document structure
const workWithUsData = {
  h2: "Work With Us",
  body: "Whether you're managing a small install or a solar farm decommissioning, PV Industries is your trusted partner in responsible solar panel recycling.",
  h3: "Let's turn end-of-life solar into a new beginning.",
  h2_cta: "Get in Touch Today"
};
---

<section class="work-with-us-section" id="work-with-us">
  <div class="cta-background"></div>
  
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{workWithUsData.h2}</h2>
      <p class="cta-description">{workWithUsData.body}</p>
      <h3 class="cta-subtitle">{workWithUsData.h3}</h3>
      
      <div class="cta-actions">
        <h2 class="cta-action-title">{workWithUsData.h2_cta}</h2>
        <div class="cta-buttons">
          <a href="#contact" class="button button-primary">
            Start Your Project
            <svg class="button-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="/services" class="button button-secondary">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .work-with-us-section {
    position: relative;
    padding: var(--space-24) 0;
    color: var(--color-neutral-100);
    overflow: hidden;
  }

  .cta-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 50%, #1e40af 100%);
    z-index: -1;
  }

  .cta-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
    z-index: -1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    animation: fadeInUp 0.8s ease-out;
  }

  .cta-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: var(--space-6);
    color: var(--color-neutral-100);
  }

  .cta-description {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    margin-bottom: var(--space-6);
    color: var(--color-neutral-200);
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .cta-subtitle {
    font-size: var(--font-size-xl);
    font-weight: 500;
    line-height: 1.3;
    margin-bottom: var(--space-10);
    color: var(--color-neutral-100);
    font-style: italic;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .cta-actions {
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  .cta-action-title {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 600;
    margin-bottom: var(--space-8);
    color: var(--color-neutral-100);
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-lg);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
    white-space: nowrap;
  }

  .button-primary {
    background: var(--color-neutral-100);
    color: var(--color-primary);
    border-color: var(--color-neutral-100);
  }

  .button-primary:hover {
    background: transparent;
    color: var(--color-neutral-100);
    border-color: var(--color-neutral-100);
    transform: translateY(-2px);
  }

  .button-secondary {
    background: transparent;
    color: var(--color-neutral-100);
    border-color: var(--color-neutral-100);
  }

  .button-secondary:hover {
    background: var(--color-neutral-100);
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .button-icon {
    transition: transform var(--transition-normal);
  }

  .button-primary:hover .button-icon {
    transform: translateX(2px);
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .work-with-us-section {
      padding: var(--space-20) 0;
    }
    
    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }
    
    .button {
      width: 100%;
      justify-content: center;
      max-width: 300px;
    }
  }
</style>