---
// Marketing Core Services section following the exact marketing document structure
const coreServicesData = {
  h2: "Our Core Services",
  services: [
    {
      h3: "Solar Panel Recycling",
      body: "Certified recycling for PV modules, inverters, cabling, and framing. Divert solar waste from landfill with full traceability and reporting.",
      icon: "recycling"
    },
    {
      h3: "National Collection & Logistics",
      body: "From single rooftop systems to multi-megawatt solar farms, we provide reliable and scalable pickup and transportation services across Australia.",
      icon: "logistics"
    },
    {
      h3: "Clean Material Recovery",
      body: "We process end-of-life solar panels into clean, high-quality materials for reuse by our manufacturing partnersâ€”supporting circular economy outcomes.",
      icon: "materials"
    }
  ]
};
---

<section class="core-services-section" id="core-services">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{coreServicesData.h2}</h2>
    </div>
    
    <div class="services-grid">
      {coreServicesData.services.map((service, index) => (
        <div class="service-card" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="service-icon">
            {service.icon === "recycling" && (
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                <path d="M7 6H17L19.5 3.5L21 5L19 7H7L5 5L6.5 3.5L7 6Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M17 6V16C17 17.1 16.1 18 15 18H9C7.9 18 7 17.1 7 16V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M10 11V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M14 11V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="12" cy="4" r="2" stroke="currentColor" stroke-width="2"/>
              </svg>
            )}
            {service.icon === "logistics" && (
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                <path d="M1 3H3L3.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.7 15.3C4.3 15.7 4.6 16.5 5.1 16.5H17M17 13V19C17 19.6 16.6 20 16 20H8C7.4 20 7 19.6 7 19V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="9" cy="20" r="1" stroke="currentColor" stroke-width="2"/>
                <circle cx="20" cy="20" r="1" stroke="currentColor" stroke-width="2"/>
              </svg>
            )}
            {service.icon === "materials" && (
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                <path d="M21.5 12.5L16 18L10.5 12.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M21.5 6L16 11.5L10.5 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M3 7V17C3 18.1 3.9 19 5 19H7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M3 7C3 5.9 3.9 5 5 5H7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="16" cy="12" r="2" stroke="currentColor" stroke-width="2"/>
              </svg>
            )}
          </div>
          
          <div class="service-content">
            <h3 class="service-title">{service.h3}</h3>
            <p class="service-body">{service.body}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="services-cta">
      <a href="/services" class="services-link">
        <span>Explore Our Process</span>
        <svg class="link-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .core-services-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-50);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: 0;
    animation: fadeInUp 0.8s ease-out;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    background: var(--color-neutral-100);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    border: 1px solid var(--color-neutral-200);
    transition: all var(--transition-normal);
    height: 100%;
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: var(--color-primary-light);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-6);
    color: var(--color-neutral-100);
    flex-shrink: 0;
  }

  .service-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-4);
  }

  .service-body {
    font-size: var(--font-size-base);
    color: var(--color-neutral-600);
    line-height: 1.6;
    flex: 1;
    margin-bottom: 0;
  }

  .services-cta {
    text-align: center;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  .services-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    text-decoration: none;
    color: var(--color-primary);
    transition: all var(--transition-normal);
    padding: var(--space-3) var(--space-6);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-lg);
    background: transparent;
    font-size: var(--font-size-lg);
    font-weight: 600;
  }

  .services-link:hover {
    background: var(--color-primary);
    color: var(--color-neutral-100);
    transform: translateY(-2px);
  }

  .link-icon {
    transition: transform var(--transition-normal);
  }

  .services-link:hover .link-icon {
    transform: translateX(2px);
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .services-grid {
      gap: var(--space-6);
    }
    
    .service-card {
      padding: var(--space-6);
    }
  }
</style>