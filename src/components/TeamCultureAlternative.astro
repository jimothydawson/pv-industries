---
// Props interface
export interface Props {
  sectionNumber?: string;
}

// Get props with default value
const { sectionNumber = "02" } = Astro.props;

// Team Culture Section component - "Who We Are" - Circular Design
const sectionData = {
  subtitle: sectionNumber.toString().padStart(2, '0'),
  title: "Who We Are",
  description: "We're not just another recycling company. We're the people reshaping how Australia thinks about solar waste‚Äîone panel at a time.",
  circularPoints: [
    {
      title: "Sustainability Advocates",
      content: "We're driven by the belief that clean energy should never come at the cost of the environment. Our team is committed to closing the loop on solar waste.",
      position: "top", // 12 o'clock
      icon: "üå±"
    },
    {
      title: "Industry Experts", 
      content: "With backgrounds in renewable energy, waste management, logistics, environmental science, and engineering, our multidisciplinary team brings deep knowledge.",
      position: "right", // 3 o'clock
      icon: "üî¨"
    },
    {
      title: "Problem Solvers",
      content: "Every job is different, and we thrive on that. We approach each challenge with creativity and precision, delivering tailored solutions.",
      position: "bottom", // 6 o'clock
      icon: "‚ö°"
    },
    {
      title: "Collaborators",
      content: "At PV Industries, we don't work in silos. We collaborate across teams‚Äîand with our customers‚Äîto exceed expectations.",
      position: "left", // 9 o'clock
      icon: "ü§ù"
    }
  ]
};
---

<section class="team-culture-circular">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-content">
        <h2 class="section-title">{sectionData.title}</h2>
        <p class="section-description">{sectionData.description}</p>
      </div>
    </div>

    <!-- Circular Layout -->
    <div class="circular-container">
      <div class="circle-outline"></div>
      
      {sectionData.circularPoints.map((point, index) => (
        <div class={`circular-point point-${point.position}`}>
          <div class="point-card">
            <div class="point-icon">{point.icon}</div>
            <h3 class="point-title">{point.title}</h3>
            <p class="point-content">{point.content}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Closing Statement -->
    <div class="closing-statement">
      <div class="statement-content">
        <h3 class="statement-title">Closing the Loop</h3>
        <p class="statement-text">Together, we're not just processing materials‚Äîwe're pioneering a sustainable future where waste becomes resource, and every solar panel gets a second life in Australia's circular economy.</p>
      </div>
    </div>
  </div>
</section>

<style>
  .team-culture-circular {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, var(--color-neutral-50) 0%, var(--color-neutral-100) 100%);
    overflow: hidden;
    position: relative;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .header-content {
    opacity: 1;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--color-neutral-900);
    line-height: 1.2;
    margin: 0 0 var(--space-6);
  }

  .section-description {
    font-size: var(--font-size-xl);
    color: var(--color-neutral-700);
    line-height: 1.6;
    margin: 0;
    font-weight: 400;
  }

  /* Circular Container */
  .circular-container {
    position: relative;
    width: min(600px, 90vw);
    height: min(600px, 90vw);
    margin: var(--space-20) auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Circle Outline */
  .circle-outline {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    border: 2px solid var(--color-primary);
    border-radius: 50%;
    opacity: 0.3;
  }

  /* Circular Points */
  .circular-point {
    position: absolute;
    width: 220px;
  }

  .point-top {
    top: -80px;
    left: 50%;
    transform: translateX(-50%);
  }

  .point-right {
    top: 50%;
    right: -110px;
    transform: translateY(-50%);
  }

  .point-bottom {
    bottom: -80px;
    left: 50%;
    transform: translateX(-50%);
  }

  .point-left {
    top: 50%;
    left: -110px;
    transform: translateY(-50%);
  }

  .point-card {
    background: transparent;
    padding: var(--space-4);
    text-align: center;
  }

  .point-icon {
    font-size: 2rem;
    margin-bottom: var(--space-3);
    display: block;
  }

  .point-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin: 0 0 var(--space-3);
  }

  .point-content {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-700);
    line-height: 1.5;
    margin: 0;
  }

  /* Closing Statement */
  .closing-statement {
    margin-top: var(--space-20);
    text-align: center;
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius-lg);
    padding: var(--space-12);
    position: relative;
    overflow: hidden;
  }

  .closing-statement::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='30'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
    opacity: 0.1;
  }

  .statement-content {
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .statement-title {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    margin: 0 0 var(--space-4);
  }

  .statement-text {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    margin: 0;
    opacity: 0.95;
  }

  /* Mobile Responsiveness */
  @media (max-width: 1024px) {
    .circular-container {
      width: min(500px, 95vw);
      height: min(500px, 95vw);
    }

    .circle-outline {
      width: 280px;
      height: 280px;
    }

    .circular-point {
      width: 200px;
    }

    .point-top {
      top: -70px;
    }

    .point-right {
      right: -100px;
    }

    .point-bottom {
      bottom: -70px;
    }

    .point-left {
      left: -100px;
    }

    .point-icon {
      font-size: 1.75rem;
    }

    .point-title {
      font-size: var(--font-size-base);
    }
  }

  @media (max-width: 767px) {
    .team-culture-circular {
      padding: var(--space-16) 0;
    }

    .circular-container {
      width: 95vw;
      height: 95vw;
      max-width: 350px;
      max-height: 350px;
    }

    .circle-outline {
      width: 200px;
      height: 200px;
    }

    .circular-point {
      width: 160px;
    }

    .point-top {
      top: -60px;
    }

    .point-right {
      right: -80px;
    }

    .point-bottom {
      bottom: -60px;
    }

    .point-left {
      left: -80px;
    }

    .point-card {
      padding: var(--space-2);
    }

    .point-icon {
      font-size: 1.5rem;
      margin-bottom: var(--space-2);
    }

    .point-title {
      font-size: var(--font-size-sm);
      margin-bottom: var(--space-2);
    }

    .point-content {
      font-size: var(--font-size-xs);
    }

    .closing-statement {
      margin-top: var(--space-16);
      padding: var(--space-8);
    }
  }
</style>