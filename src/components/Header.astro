---
// Header component data with dropdown structure
const navigation = [
  {
    name: 'Home',
    href: '/',
    current: true
  },
  {
    name: 'About',
    href: '/about',
    dropdown: [
      { name: 'Team', href: '/meet-the-team' },
      { name: 'Processes', href: '/processes' },
      { name: 'Partners', href: '/partners' }
    ]
  },
  {
    name: 'Industries We Serve',
    href: '/industries',
    dropdown: [
      { name: 'Commercial', href: '/commercial' },
      { name: 'Utility', href: '/utility' },
      { name: 'Government', href: '/government' }
    ]
  },
  {
    name: 'FAQ\'s',
    href: '/faqs'
  },
  {
    name: 'News',
    href: '/articles'
  }
];

const contactEmail = 'contact@pvindustries.com.au';
---

<header class="header">
  <div class="container">
    <div class="header-content">
      <!-- Logo -->
      <div class="header-logo">
        <a href="/" class="logo-link">
          <img 
            src="/images/cropped-orangewhite_1000x1000.png" 
            alt="PV Industries Logo" 
            class="logo-image"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="desktop-nav" aria-label="Main navigation">
        <ul class="nav-list">
          {navigation.map((item) => (
            <li class={`nav-item ${item.dropdown ? 'has-dropdown' : ''}`}>
              <a
                href={item.href}
                class={`nav-link ${item.current ? 'current' : ''}`}
                aria-current={item.current ? 'page' : undefined}
                aria-haspopup={item.dropdown ? 'true' : undefined}
                aria-expanded={item.dropdown ? 'false' : undefined}
              >
                {item.name}
                {item.dropdown && (
                  <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                    <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                )}
              </a>
              {item.dropdown && (
                <ul class="dropdown-menu">
                  {item.dropdown.map((subItem) => (
                    <li class="dropdown-item">
                      <a href={subItem.href} class="dropdown-link">
                        {subItem.name}
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </li>
          ))}
        </ul>
      </nav>

      <!-- Header Actions -->
      <div class="header-actions">
        <!-- Contact Email (hidden on mobile) -->
        <div class="contact-email">
          <a href={`mailto:${contactEmail}`} class="email-link">
            {contactEmail}
          </a>
        </div>

        <!-- CTA Button -->
        <a href="#quote" class="button button-primary">
          Get in touch
          <svg class="button-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>

        <!-- Mobile Menu Button -->
        <button class="mobile-menu-button" aria-label="Toggle mobile menu" aria-expanded="false">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <nav class="mobile-nav" aria-label="Mobile navigation">
      <ul class="mobile-nav-list">
        {navigation.map((item) => (
          <li class="mobile-nav-item">
            <a
              href={item.href}
              class={`mobile-nav-link ${item.current ? 'current' : ''} ${item.dropdown ? 'has-dropdown' : ''}`}
            >
              {item.name}
              {item.dropdown && (
                <svg class="mobile-dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                  <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
            </a>
            {item.dropdown && (
              <ul class="mobile-dropdown-menu">
                {item.dropdown.map((subItem) => (
                  <li class="mobile-dropdown-item">
                    <a href={subItem.href} class="mobile-dropdown-link">
                      {subItem.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
        <li class="mobile-nav-item">
          <a href="#quote" class="mobile-nav-link cta">
            Get in touch
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-normal);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) 0;
    gap: var(--space-8);
  }

  /* Logo */
  .header-logo {
    flex-shrink: 0;
  }

  .logo-link {
    display: block;
    transition: transform var(--transition-normal);
  }

  .logo-link:hover {
    transform: scale(1.05);
  }

  .logo-image {
    height: 40px;
    width: auto;
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: none;
  }

  @media (min-width: 1024px) {
    .desktop-nav {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-8);
    list-style: none;
  }

  .nav-link {
    color: var(--color-neutral-200);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-2) 0;
    position: relative;
    transition: color var(--transition-normal);
  }

  .nav-link:hover,
  .nav-link.current {
    color: var(--color-neutral-100);
  }

  .nav-link.current::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
  }

  /* Dropdown Styles */
  .nav-item.has-dropdown {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .dropdown-icon {
    transition: transform var(--transition-normal);
  }

  .nav-item.has-dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 200px;
    background: rgba(15, 23, 42, 0.98);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--transition-normal);
    z-index: 1000;
    list-style: none;
    padding: var(--space-2);
    margin-top: var(--space-2);
  }

  .nav-item.has-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    margin: 0;
  }

  .dropdown-link {
    display: block;
    color: var(--color-neutral-200);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-sm);
    transition: all var(--transition-normal);
    font-size: var(--font-size-sm);
  }

  .dropdown-link:hover {
    color: var(--color-neutral-100);
    background: rgba(255, 255, 255, 0.1);
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .contact-email {
    display: none;
  }

  @media (min-width: 1024px) {
    .contact-email {
      display: block;
    }
  }

  .email-link {
    color: var(--color-neutral-300);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color var(--transition-normal);
  }

  .email-link:hover {
    color: var(--color-neutral-100);
  }

  .button-icon {
    transition: transform var(--transition-normal);
  }

  .button:hover .button-icon {
    transform: translateX(2px);
  }

  /* Mobile Menu Button */
  .mobile-menu-button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 32px;
    height: 32px;
    background: none;
    border: none;
    cursor: pointer;
    gap: 4px;
  }

  @media (min-width: 1024px) {
    .mobile-menu-button {
      display: none;
    }
  }

  .hamburger-line {
    width: 20px;
    height: 2px;
    background: var(--color-neutral-100);
    border-radius: 1px;
    transition: all var(--transition-normal);
  }

  .mobile-menu-button:hover .hamburger-line {
    background: var(--color-primary);
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: none;
    padding: var(--space-4) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-nav.open {
    display: block;
  }

  .mobile-nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .mobile-nav-link {
    display: block;
    color: var(--color-neutral-200);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-3);
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link.current {
    color: var(--color-neutral-100);
    background: rgba(255, 255, 255, 0.1);
  }

  .mobile-nav-link.cta {
    background: var(--color-primary);
    color: var(--color-neutral-100);
    text-align: center;
    margin-top: var(--space-4);
  }

  .mobile-nav-link.cta:hover {
    background: var(--color-primary-dark);
  }

  /* Mobile Dropdown Styles */
  .mobile-nav-link.has-dropdown {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .mobile-dropdown-icon {
    transition: transform var(--transition-normal);
  }

  .mobile-nav-item:has(.mobile-dropdown-menu.open) .mobile-dropdown-icon {
    transform: rotate(180deg);
  }

  .mobile-dropdown-menu {
    list-style: none;
    padding-left: var(--space-4);
    margin-top: var(--space-2);
    display: none;
  }

  .mobile-dropdown-menu.open {
    display: block;
  }

  .mobile-dropdown-link {
    display: block;
    color: var(--color-neutral-300);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-sm);
    transition: all var(--transition-normal);
    font-size: var(--font-size-sm);
  }

  .mobile-dropdown-link:hover {
    color: var(--color-neutral-100);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Scroll behavior */
  .header.scrolled {
    background: rgba(15, 23, 42, 0.98);
    box-shadow: var(--shadow-lg);
  }

  /* Add top padding to body to account for fixed header */
  :global(body) {
    padding-top: 80px;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileNav = document.querySelector('.mobile-nav');
  const header = document.querySelector('.header');

  if (mobileMenuButton && mobileNav) {
    mobileMenuButton.addEventListener('click', () => {
      const isOpen = mobileNav.classList.contains('open');
      
      if (isOpen) {
        mobileNav.classList.remove('open');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
      } else {
        mobileNav.classList.add('open');
        mobileMenuButton.setAttribute('aria-expanded', 'true');
      }
    });
  }

  // Header scroll effect
  if (header) {
    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  }

  // Mobile dropdown toggle functionality
  const mobileDropdownLinks = document.querySelectorAll('.mobile-nav-link.has-dropdown');
  
  mobileDropdownLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const dropdownMenu = link.nextElementSibling;
      
      if (dropdownMenu && dropdownMenu.classList.contains('mobile-dropdown-menu')) {
        const isOpen = dropdownMenu.classList.contains('open');
        
        // Close all other dropdowns
        document.querySelectorAll('.mobile-dropdown-menu.open').forEach(menu => {
          if (menu !== dropdownMenu) {
            menu.classList.remove('open');
          }
        });
        
        // Toggle current dropdown
        if (isOpen) {
          dropdownMenu.classList.remove('open');
        } else {
          dropdownMenu.classList.add('open');
        }
      }
    });
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (mobileNav && mobileMenuButton) {
      const isClickInsideNav = mobileNav.contains(e.target as Node);
      const isClickOnButton = mobileMenuButton.contains(e.target as Node);
      
      if (!isClickInsideNav && !isClickOnButton && mobileNav.classList.contains('open')) {
        mobileNav.classList.remove('open');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        
        // Close all mobile dropdowns when closing mobile menu
        document.querySelectorAll('.mobile-dropdown-menu.open').forEach(menu => {
          menu.classList.remove('open');
        });
      }
    }
  });
</script>