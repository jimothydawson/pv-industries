<style>
  .sib-form {
    padding: 0;
    background-color: transparent!important;
  }

  .newsletter-subscription {
    background: linear-gradient(135deg, var(--color-neutral-900) 0%, var(--color-neutral-800) 100%);
    position: relative;
    overflow: hidden;
  }

  .newsletter-subscription::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/images/solar-panels-bg.jpg') center/cover;
    opacity: 0.05;
    z-index: 1;
  }

  .newsletter-content {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    padding: var(--space-16) var(--space-8);
  }

  /* Newsletter Text */
  .newsletter-text {
    color: var(--color-neutral-100);
  }

  .newsletter-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: var(--color-neutral-100);
  }

  .newsletter-description {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    color: var(--color-neutral-300);
    margin-bottom: var(--space-6);
  }

  .newsletter-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-neutral-200);
    font-size: var(--font-size-sm);
  }

  .feature-icon {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  /* Newsletter Form */
  .newsletter-form {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Brevo Form Styles */
  .brevo-signup-container {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    width: 100%;
    max-width: 400px;
  }

  .brevo-form-wrapper {
    text-align: center;
  }

  .brevo-form-title {
    color: var(--color-neutral-100);
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .brevo-form-description {
    color: var(--color-neutral-300);
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-6);
  }

  .brevo-form-embed {
    margin-bottom: var(--space-4);
  }

  /* Custom styling for Brevo form elements */
  .brevo-form-embed :global(.hs-form) {
    background: transparent !important;
  }

  .brevo-form-embed :global(.hs-form-field) {
    margin-bottom: var(--space-4) !important;
  }

  .brevo-form-embed :global(.hs-input) {
    background: rgba(255, 255, 255, 0.1) !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    border-radius: var(--radius-md) !important;
    padding: var(--space-3) var(--space-4) !important;
    color: var(--color-neutral-100) !important;
    font-size: var(--font-size-sm) !important;
    width: 100% !important;
    box-sizing: border-box !important;
  }

  .brevo-form-embed :global(.hs-input::placeholder) {
    color: var(--color-neutral-400) !important;
  }

  .brevo-form-embed :global(.hs-button) {
    background: var(--color-primary) !important;
    color: var(--color-neutral-900) !important;
    border: none !important;
    border-radius: var(--radius-md) !important;
    padding: var(--space-3) var(--space-6) !important;
    font-weight: 600 !important;
    font-size: var(--font-size-sm) !important;
    cursor: pointer !important;
    width: 100% !important;
    transition: all 0.2s ease !important;
  }

  .brevo-form-embed :global(.hs-button:hover) {
    background: var(--color-primary-dark) !important;
    transform: translateY(-1px) !important;
  }

  .brevo-form-embed :global(.hs-error-msgs) {
    color: #ef4444 !important;
    font-size: var(--font-size-xs) !important;
    margin-top: var(--space-1) !important;
  }

  .brevo-form-embed :global(.hs-error-msgs label) {
    color: #ef4444 !important;
  }

  .brevo-form-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: var(--space-3);
  }

  .privacy-note {
    color: var(--color-neutral-400);
    font-size: var(--font-size-xs);
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .newsletter-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
      text-align: center;
      padding: var(--space-12) var(--space-6);
    }

    .newsletter-text {
      order: 1;
    }

    .newsletter-form {
      order: 2;
    }
  }

  @media (max-width: 768px) {
    .newsletter-content {
      padding: var(--space-10) var(--space-4);
      gap: var(--space-6);
    }

    .newsletter-title {
      font-size: var(--font-size-2xl);
    }

    .newsletter-description {
      font-size: var(--font-size-base);
    }

    .brevo-signup-container {
      padding: var(--space-6);
    }

    .newsletter-features {
      justify-content: center;
      max-width: 300px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .newsletter-content {
      padding: var(--space-8) var(--space-3);
    }

    .brevo-signup-container {
      padding: var(--space-5);
    }

    .brevo-form-title {
      font-size: var(--font-size-lg);
    }
  }
</style>