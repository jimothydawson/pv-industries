---
// Marketing Testimonials section following the exact marketing document structure
const testimonialsData = {
  h3: "What Our Clients Say",
  testimonials: [
    {
      quote: "PV Industries helped us recycle a large volume of solar panels quickly and professionally. They handled everything—logistics, documentation, and processing. An excellent partner for the long term.",
      name: "Nathan W.",
      title: "Commercial Solar Contractor"
    },
    {
      quote: "As a council, finding a sustainable and compliant solution for solar panel waste was critical. PV Industries delivered on every level.",
      name: "Alicia T.",
      title: "Local Government Sustainability Officer"
    }
  ]
};
---

<section class="testimonials-section" id="testimonials">
  <div class="container">
    <div class="section-header">
      <h3 class="section-title">{testimonialsData.h3}</h3>
    </div>
    
    <div class="testimonials-grid">
      {testimonialsData.testimonials.map((testimonial, index) => (
        <div class="testimonial-card" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="quote-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M3 21C3 17.4 3 14.2 3 12C3 7 7 3 12 3C17 3 21 7 21 12V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M9 18C9 16.3 7.7 15 6 15C4.3 15 3 16.3 3 18C3 19.7 4.3 21 6 21C7.7 21 9 19.7 9 18Z" fill="currentColor"/>
              <path d="M21 18C21 16.3 19.7 15 18 15C16.3 15 15 16.3 15 18C15 19.7 16.3 21 18 21C19.7 21 21 19.7 21 18Z" fill="currentColor"/>
            </svg>
          </div>
          
          <div class="testimonial-content">
            <blockquote class="testimonial-quote">
              "{testimonial.quote}"
            </blockquote>
            
            <div class="testimonial-attribution">
              <div class="client-info">
                <span class="client-name">– {testimonial.name}</span>
                <span class="client-title">{testimonial.title}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-100);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: 0;
    animation: fadeInUp 0.8s ease-out;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-10);
    }
  }

  .testimonial-card {
    background: var(--color-neutral-50);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    border: 1px solid var(--color-neutral-200);
    transition: all var(--transition-normal);
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: var(--color-primary-light);
  }

  .quote-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-100);
    margin-bottom: var(--space-6);
    flex-shrink: 0;
  }

  .testimonial-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .testimonial-quote {
    font-size: var(--font-size-lg);
    color: var(--color-neutral-700);
    line-height: 1.6;
    font-style: italic;
    margin: 0 0 var(--space-6) 0;
    flex: 1;
  }

  .testimonial-attribution {
    margin-top: auto;
  }

  .client-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .client-name {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-neutral-900);
  }

  .client-title {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-600);
    font-weight: 500;
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .testimonials-grid {
      gap: var(--space-6);
    }
    
    .testimonial-card {
      padding: var(--space-6);
    }
    
    .quote-icon {
      width: 40px;
      height: 40px;
    }
    
    .testimonial-quote {
      font-size: var(--font-size-base);
    }
  }
</style>