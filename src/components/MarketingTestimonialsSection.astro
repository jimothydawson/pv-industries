---
// Marketing Testimonials section following the exact marketing document structure
const testimonialsData = {
  h3: "What Our Clients Say",
  testimonials: [
    {
      quote: "PV Industries helped us recycle a large volume of solar panels quickly and professionally. They handled everything—logistics, documentation, and processing. An excellent partner for the long term.",
      author: "Nathan W.",
      role: "Commercial Solar Contractor"
    },
    {
      quote: "As a council, finding a sustainable and compliant solution for solar panel waste was critical. PV Industries delivered on every level.",
      author: "Alicia T.",
      role: "Local Government Sustainability Officer"
    }
  ]
};
---

<section class="testimonials-section" id="testimonials">
  <div class="container">
    <div class="section-header">
      <h3 class="section-title">{testimonialsData.h3}</h3>
    </div>
    
    <div class="testimonials-grid">
      {testimonialsData.testimonials.map((testimonial, index) => (
        <div class="testimonial-card" data-aos="fade-up" data-aos-delay={index * 150}>
          <div class="quote-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M3 21C3 17.4 3 14.8 3 13.2C3 8.5 6.5 5 11.2 5C11.6 5 12 5.4 12 5.8V7.2C12 7.6 11.6 8 11.2 8C8.1 8 6 10.1 6 13.2C6 13.7 6.4 14.1 6.9 14.1H9C10.1 14.1 11 15 11 16.1V19C11 20.1 10.1 21 9 21H6C4.3 21 3 19.7 3 18V21Z" fill="currentColor"/>
              <path d="M13 21C13 17.4 13 14.8 13 13.2C13 8.5 16.5 5 21.2 5C21.6 5 22 5.4 22 5.8V7.2C22 7.6 21.6 8 21.2 8C18.1 8 16 10.1 16 13.2C16 13.7 16.4 14.1 16.9 14.1H19C20.1 14.1 21 15 21 16.1V19C21 20.1 20.1 21 19 21H16C14.3 21 13 19.7 13 18V21Z" fill="currentColor"/>
            </svg>
          </div>
          
          <blockquote class="testimonial-quote">
            "{testimonial.quote}"
          </blockquote>
          
          <div class="testimonial-author">
            <div class="author-avatar">
              <span class="author-initials">
                {testimonial.author.split(' ').map(name => name[0]).join('')}
              </span>
            </div>
            <div class="author-info">
              <div class="author-name">– {testimonial.author}</div>
              <div class="author-details">
                <span class="author-role">{testimonial.role}</span>
              </div>
            </div>
          </div>
          
          <div class="rating">
            {[...Array(5)].map(() => (
              <svg class="star" width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: var(--space-20) 0;
    background: var(--color-neutral-50);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: 0;
    animation: fadeInUp 0.8s ease-out;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .testimonial-card {
    background: var(--color-neutral-100);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    border: 1px solid var(--color-neutral-200);
    transition: all var(--transition-normal);
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-color: var(--color-primary-light);
  }

  .quote-icon {
    color: var(--color-primary-light);
    margin-bottom: var(--space-4);
    opacity: 0.7;
  }

  .testimonial-quote {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    color: var(--color-neutral-700);
    margin: 0 0 var(--space-6) 0;
    flex: 1;
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .author-initials {
    color: var(--color-neutral-100);
    font-weight: 600;
    font-size: var(--font-size-base);
  }

  .author-info {
    flex: 1;
  }

  .author-name {
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: var(--space-1);
    font-size: var(--font-size-base);
  }

  .author-details {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-600);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .author-role {
    font-weight: 500;
  }

  .company-separator {
    color: var(--color-neutral-400);
  }

  .author-company {
    color: var(--color-primary);
    font-weight: 500;
  }

  .rating {
    display: flex;
    gap: var(--space-1);
    color: var(--color-accent);
  }

  .star {
    width: 16px;
    height: 16px;
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .testimonial-card {
      padding: var(--space-6);
    }
    
    .testimonial-quote {
      font-size: var(--font-size-base);
    }
    
    .author-details {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-1);
    }
    
    .company-separator {
      display: none;
    }
  }
</style>