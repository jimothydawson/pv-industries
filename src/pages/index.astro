---
// src/pages/index.astro (reverted to original homepage)
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import FutureSection from '../components/FutureSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import ProcessSection from '../components/ProcessSection.astro';
import HowWeRecycleSection from '../components/HowWeRecycleSection.astro';
import CtaSection from '../components/CtaSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import PartnersSection from '../components/PartnersSection.astro';
import ContactSection from '../components/ContactSection.astro';
import NewsSection from '../components/NewsSection.astro';
import Footer from '../components/Footer.astro';
import { generateSectionNumbers } from '../utils/sectionUtils';

const pageTitle = "PV Industries â€“ Australia's Leader in Solar Panel Recycling";
const pageDescription = "PV Industries is leading the way in solar panel recycling in Australia.";

// Define the order of numbered sections (excluding Hero and CTA sections)
// PartnersSection should be the first numbered section (second on the page)
const numberedSections = [
  'PartnersSection',
  'FutureSection',
  'ServicesSection',
  'ProcessSection',
  'HowWeRecycleSection',
  'TestimonialsSection',
  'NewsSection'
];

// Generate section numbers automatically
const sectionNumbers = generateSectionNumbers(numberedSections);
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main>
    <HeroSection />
    <PartnersSection sectionNumber={sectionNumbers.PartnersSection} />
    <FutureSection sectionNumber={sectionNumbers.FutureSection} />
    <ServicesSection sectionNumber={sectionNumbers.ServicesSection} />
    <ProcessSection sectionNumber={sectionNumbers.ProcessSection} />
    <HowWeRecycleSection sectionNumber={sectionNumbers.HowWeRecycleSection} />
    <CtaSection />
    <TestimonialsSection sectionNumber={sectionNumbers.TestimonialsSection} />
    <NewsSection sectionNumber={sectionNumbers.NewsSection} />
    <ContactSection />
  </main>
  <Footer />
</Layout>