---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import AboutHeroSection from '../components/AboutHeroSection.astro';
import TeamSection from '../components/TeamSection.astro';
import TeamValuesSection from '../components/TeamValuesSection.astro';
import TeamCultureSection from '../components/TeamCultureSection.astro';
import TeamTestimonialsSection from '../components/TeamTestimonialsSection.astro';
import CareersSection from '../components/CareersSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
import { generateSectionNumbers } from '../utils/sectionUtils';

const pageTitle = "About - PV Industries";
const pageDescription = "Meet the passionate team behind PV Industries. Learn about our people, values, and culture as we lead Australia in solar panel recycling and circular economy solutions.";

// Define the order of numbered sections for the about page
const numberedSections = [
  'TeamSection',
  'TeamCultureSection',
  'TeamValuesSection',
  'TeamTestimonialsSection',
  'CareersSection'
];

// Generate section numbers automatically
const sectionNumbers = generateSectionNumbers(numberedSections);
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main>
    <AboutHeroSection />
    <TeamSection sectionNumber={sectionNumbers.TeamSection} />
    <TeamCultureSection sectionNumber={sectionNumbers.TeamCultureSection} />
    <TeamValuesSection sectionNumber={sectionNumbers.TeamValuesSection} />
    <TeamTestimonialsSection sectionNumber={sectionNumbers.TeamTestimonialsSection} />
    <CareersSection sectionNumber={sectionNumbers.CareersSection} />
    <ContactSection />
  </main>
  <Footer />
</Layout>