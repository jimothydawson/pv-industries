import HomeIcon from '../components/icons/HomeIcon.astro';
import InnovationIcon from '../components/icons/InnovationIcon.astro';
import LeadershipIcon from '../components/icons/LeadershipIcon.astro';
import LinkIcon from '../components/icons/LinkIcon.astro';
import MaterialsIcon from '../components/icons/MaterialsIcon.astro';
