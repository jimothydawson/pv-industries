---
// Layout Showcase Page
// This page demonstrates the different section layout patterns used throughout the site

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Layout Showcase - PV Industries</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <Header />
  
  <main class="showcase-main">
    <!-- Page Header -->
    <section class="showcase-header">
      <div class="container">
        <h1 class="showcase-title">Layout Showcase</h1>
        <p class="showcase-description">
          A demonstration of the different section layout patterns used throughout the PV Industries website. 
          Each example shows the layout structure with minimal content to focus on the design patterns.
        </p>
        
        <!-- Navigation Menu -->
        <nav class="showcase-nav">
          <a href="#hero-layout" class="nav-link">Hero Layouts</a>
          <a href="#grid-layouts" class="nav-link">Grid Layouts</a>
          <a href="#stats-layouts" class="nav-link">Stats Layouts</a>
          <a href="#testimonial-layouts" class="nav-link">Testimonial Layouts</a>
          <a href="#team-layouts" class="nav-link">Team Layouts</a>
          <a href="#cta-layouts" class="nav-link">CTA Layouts</a>
        </nav>
      </div>
    </section>

    <!-- Hero Layout Patterns -->
    <section id="hero-layout" class="showcase-section">
      <div class="container">
        <h2 class="section-title">Hero Layout Patterns</h2>
        
        <!-- Complex Hero with Stats and Contact Grid -->
        <div class="layout-example">
          <h3 class="layout-title">Complex Hero Layout</h3>
          <p class="layout-description">Full-screen hero with title, stats, description, actions, and bottom contact grid</p>
          
          <div class="demo-section hero-demo">
            <div class="hero-background-demo"></div>
            <div class="hero-container-demo">
              <!-- Main Hero Content -->
              <div class="hero-main-content-demo">
                <div class="hero-text-content-demo">
                  <h1 class="hero-title-demo">Main Hero Title</h1>
                </div>
                
                <div class="hero-middle-content-demo">
                  <!-- Stats -->
                  <div class="hero-stats-demo">
                    <div class="hero-stat-demo">
                      <div class="stat-label-demo">Metric 1</div>
                      <div class="stat-number-demo">
                        <span class="stat-value-demo">200</span>
                        <span class="stat-suffix-demo">+</span>
                      </div>
                    </div>
                    <div class="hero-stat-demo">
                      <div class="stat-label-demo">Metric 2</div>
                      <div class="stat-number-demo">
                        <span class="stat-value-demo">95</span>
                        <span class="stat-suffix-demo">%</span>
                      </div>
                    </div>
                    <div class="hero-stat-demo">
                      <div class="stat-label-demo">Metric 3</div>
                      <div class="stat-number-demo">
                        <span class="stat-value-demo">2.5K</span>
                        <span class="stat-suffix-demo">+</span>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Description and Actions -->
                  <div class="hero-description-section-demo">
                    <p class="hero-description-demo">Hero description text explaining the main value proposition.</p>
                    <div class="hero-actions-demo">
                      <button class="button-demo button-primary-demo">Primary Action</button>
                      <button class="button-demo button-secondary-demo">Secondary Action</button>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Hero Bottom Content -->
              <div class="hero-bottom-content-demo">
                <div class="hero-contact-grid-demo">
                  <div class="contact-block-demo">
                    <h4>Contact Info</h4>
                    <p>Contact details</p>
                  </div>
                  <div class="contact-block-demo">
                    <h4>Locations</h4>
                    <p>Location links</p>
                  </div>
                  <div class="contact-block-demo newsletter-block-demo">
                    <h4>Newsletter</h4>
                    <div class="newsletter-form-demo">
                      <input type="email" placeholder="Email" class="newsletter-input-demo">
                      <button class="newsletter-button-demo">Subscribe</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Grid Layout Patterns -->
    <section id="grid-layouts" class="showcase-section">
      <div class="container">
        <h2 class="section-title">Grid Layout Patterns</h2>
        
        <!-- 3-Column Card Grid -->
        <div class="layout-example">
          <h3 class="layout-title">3-Column Card Grid</h3>
          <p class="layout-description">Responsive grid that shows 1 column on mobile, 2 on tablet, 3 on desktop</p>
          
          <div class="demo-section">
            <div class="section-header-demo">
              <h2>Section Title</h2>
              <h3>Section Subtitle</h3>
              <p>Section description explaining the content below.</p>
            </div>
            
            <div class="grid-demo three-column">
              <div class="card-demo">
                <div class="card-icon-demo"></div>
                <h4>Card Title 1</h4>
                <p>Card description with some explanatory text.</p>
                <ul class="feature-list-demo">
                  <li>Feature 1</li>
                  <li>Feature 2</li>
                  <li>Feature 3</li>
                </ul>
              </div>
              <div class="card-demo">
                <div class="card-icon-demo"></div>
                <h4>Card Title 2</h4>
                <p>Card description with some explanatory text.</p>
                <ul class="feature-list-demo">
                  <li>Feature 1</li>
                  <li>Feature 2</li>
                  <li>Feature 3</li>
                </ul>
              </div>
              <div class="card-demo">
                <div class="card-icon-demo"></div>
                <h4>Card Title 3</h4>
                <p>Card description with some explanatory text.</p>
                <ul class="feature-list-demo">
                  <li>Feature 1</li>
                  <li>Feature 2</li>
                  <li>Feature 3</li>
                </ul>
              </div>
            </div>
            
            <div class="section-cta-demo">
              <div class="cta-content-demo">
                <h3>Call to Action Title</h3>
                <p>CTA description encouraging user action.</p>
              </div>
              <div class="cta-actions-demo">
                <button class="button-demo button-primary-demo">Primary CTA</button>
                <button class="button-demo button-secondary-demo">Secondary CTA</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Layout Patterns -->
    <section id="stats-layouts" class="showcase-section">
      <div class="container">
        <h2 class="section-title">Statistics Layout Patterns</h2>
        
        <!-- 4-Column Stats Grid -->
        <div class="layout-example">
          <h3 class="layout-title">4-Column Statistics Grid</h3>
          <p class="layout-description">Statistics cards with icons, large numbers, and descriptions</p>
          
          <div class="demo-section stats-demo">
            <div class="section-header-demo">
              <h2>Statistics Title</h2>
              <h3>Statistics Subtitle</h3>
              <p>Description of the impact and achievements.</p>
            </div>
            
            <div class="stats-grid-demo">
              <div class="stat-card-demo">
                <div class="stat-icon-demo"></div>
                <div class="stat-number-demo">
                  <span class="stat-value-demo">500K</span>
                  <span class="stat-suffix-demo">+</span>
                </div>
                <h4 class="stat-label-demo">Stat Label 1</h4>
                <p class="stat-description-demo">Description of statistic</p>
              </div>
              <div class="stat-card-demo">
                <div class="stat-icon-demo"></div>
                <div class="stat-number-demo">
                  <span class="stat-value-demo">95</span>
                  <span class="stat-suffix-demo">%</span>
                </div>
                <h4 class="stat-label-demo">Stat Label 2</h4>
                <p class="stat-description-demo">Description of statistic</p>
              </div>
              <div class="stat-card-demo">
                <div class="stat-icon-demo"></div>
                <div class="stat-number-demo">
                  <span class="stat-value-demo">2.5K</span>
                  <span class="stat-suffix-demo">+</span>
                </div>
                <h4 class="stat-label-demo">Stat Label 3</h4>
                <p class="stat-description-demo">Description of statistic</p>
              </div>
              <div class="stat-card-demo">
                <div class="stat-icon-demo"></div>
                <div class="stat-number-demo">
                  <span class="stat-value-demo">15K</span>
                  <span class="stat-suffix-demo">+</span>
                </div>
                <h4 class="stat-label-demo">Stat Label 4</h4>
                <p class="stat-description-demo">Description of statistic</p>
              </div>
            </div>
            
            <!-- Achievements Section -->
            <div class="achievements-section-demo">
              <h3>Key Achievements</h3>
              <div class="achievements-grid-demo">
                <div class="achievement-card-demo">
                  <div class="achievement-icon-demo"></div>
                  <div class="achievement-content-demo">
                    <h4>Achievement Title 1</h4>
                    <p>Achievement description</p>
                  </div>
                </div>
                <div class="achievement-card-demo">
                  <div class="achievement-icon-demo"></div>
                  <div class="achievement-content-demo">
                    <h4>Achievement Title 2</h4>
                    <p>Achievement description</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonial Layout Patterns -->
    <section id="testimonial-layouts" class="showcase-section">
      <div class="container">
        <h2 class="section-title">Testimonial Layout Patterns</h2>
        
        <!-- Image + Card Testimonial -->
        <div class="layout-example">
          <h3 class="layout-title">Image + Card Testimonial Layout</h3>
          <p class="layout-description">Side-by-side layout with image and testimonial card</p>
          
          <div class="demo-section">
            <div class="section-header-demo">
              <div class="subtitle-wrapper-demo">
                <div class="subtitle-divider-demo"></div>
                <div class="subtitle-demo">05</div>
                <div class="subtitle-divider-demo"></div>
              </div>
              <h2>What our clients say</h2>
            </div>
            
            <div class="testimonial-demo">
              <div class="testimonial-image-demo"></div>
              <div class="testimonial-card-demo">
                <div class="quote-icon-demo"></div>
                <div class="testimonial-content-demo">
                  <h3>"Testimonial quote headline"</h3>
                  <p>Full testimonial content explaining the experience and value provided.</p>
                </div>
                <div class="testimonial-author-demo">
                  <div class="author-name-demo">Author Name</div>
                  <div class="author-company-demo">Company Name</div>
                </div>
              </div>
            </div>
            
            <div class="slider-controls-demo">
              <button class="slider-btn-demo">←</button>
              <button class="slider-btn-demo">→</button>
            </div>
            
            <div class="slider-dots-demo">
              <span class="dot-demo active"></span>
              <span class="dot-demo"></span>
              <span class="dot-demo"></span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Layout Patterns -->
    <section id="team-layouts" class="showcase-section">
      <div class="container">
        <h2 class="section-title">Team Layout Patterns</h2>
        
        <!-- Team Member Cards -->
        <div class="layout-example">
          <h3 class="layout-title">Team Member Card Grid</h3>
          <p class="layout-description">Responsive grid of team member cards with images and social links</p>
          
          <div class="demo-section">
            <div class="section-header-demo">
              <div class="subtitle-wrapper-demo">
                <div class="subtitle-divider-demo"></div>
                <div class="subtitle-demo">01</div>
                <div class="subtitle-divider-demo"></div>
              </div>
              <h2>Meet the team</h2>
            </div>
            
            <div class="team-grid-demo">
              <div class="team-member-card-demo">
                <div class="team-member-image-demo"></div>
                <div class="team-member-content-demo">
                  <div class="team-member-info-demo">
                    <h3>Team Member 1</h3>
                    <p>Job Title</p>
                  </div>
                  <div class="team-member-social-demo">
                    <a href="#" class="social-link-demo">in</a>
                    <a href="#" class="social-link-demo">@</a>
                  </div>
                </div>
              </div>
              <div class="team-member-card-demo">
                <div class="team-member-image-demo"></div>
                <div class="team-member-content-demo">
                  <div class="team-member-info-demo">
                    <h3>Team Member 2</h3>
                    <p>Job Title</p>
                  </div>
                  <div class="team-member-social-demo">
                    <a href="#" class="social-link-demo">in</a>
                    <a href="#" class="social-link-demo">@</a>
                  </div>
                </div>
              </div>
              <div class="team-member-card-demo">
                <div class="team-member-image-demo"></div>
                <div class="team-member-content-demo">
                  <div class="team-member-info-demo">
                    <h3>Team Member 3</h3>
                    <p>Job Title</p>
                  </div>
                  <div class="team-member-social-demo">
                    <a href="#" class="social-link-demo">in</a>
                    <a href="#" class="social-link-demo">@</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Layout Patterns -->
    <section id="cta-layouts" class="showcase-section">
      <div class="container">
        <h2 class="section-title">Call-to-Action Layout Patterns</h2>
        
        <!-- Horizontal CTA -->
        <div class="layout-example">
          <h3 class="layout-title">Horizontal CTA Layout</h3>
          <p class="layout-description">Side-by-side content and actions layout</p>
          
          <div class="demo-section">
            <div class="cta-horizontal-demo">
              <div class="cta-content-demo">
                <h3>Call to Action Title</h3>
                <p>Description encouraging the user to take action with compelling copy.</p>
              </div>
              <div class="cta-actions-demo">
                <button class="button-demo button-primary-demo">Primary Action</button>
                <button class="button-demo button-secondary-demo">Secondary Action</button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Centered CTA -->
        <div class="layout-example">
          <h3 class="layout-title">Centered CTA Layout</h3>
          <p class="layout-description">Centered content with stacked actions</p>
          
          <div class="demo-section">
            <div class="cta-centered-demo">
              <div class="cta-content-demo">
                <h3>Centered Call to Action</h3>
                <p>Centered description with actions below for mobile-first design.</p>
              </div>
              <div class="cta-actions-demo">
                <button class="button-demo button-primary-demo">Primary Action</button>
                <button class="button-demo button-secondary-demo">Secondary Action</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</body>
</html>

<style>
  /* Global Showcase Styles */
  .showcase-main {
    padding-top: 80px; /* Account for fixed header */
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4, 1rem);
  }

  /* Showcase Header */
  .showcase-header {
    padding: var(--space-20, 5rem) 0;
    background: linear-gradient(135deg, var(--color-primary, #ff6b35), var(--color-primary-dark, #e55a2b));
    color: white;
    text-align: center;
  }

  .showcase-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    margin-bottom: var(--space-6, 1.5rem);
  }

  .showcase-description {
    font-size: var(--font-size-lg, 1.125rem);
    max-width: 800px;
    margin: 0 auto var(--space-12, 3rem);
    line-height: 1.6;
  }

  .showcase-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4, 1rem);
  }

  .nav-link {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    border-radius: var(--radius-lg, 0.5rem);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .nav-link:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  /* Showcase Sections */
  .showcase-section {
    padding: var(--space-20, 5rem) 0;
  }

  .showcase-section:nth-child(even) {
    background: var(--color-neutral-50, #f9fafb);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    margin-bottom: var(--space-16, 4rem);
    text-align: center;
    color: var(--color-neutral-900, #111827);
  }

  /* Layout Examples */
  .layout-example {
    margin-bottom: var(--space-20, 5rem);
    border: 2px solid var(--color-neutral-200, #e5e7eb);
    border-radius: var(--radius-xl, 0.75rem);
    overflow: hidden;
  }

  .layout-title {
    font-size: var(--font-size-xl, 1.25rem);
    font-weight: 600;
    margin-bottom: var(--space-2, 0.5rem);
    padding: var(--space-6, 1.5rem) var(--space-6, 1.5rem) 0;
    color: var(--color-neutral-900, #111827);
  }

  .layout-description {
    color: var(--color-neutral-600, #4b5563);
    margin-bottom: var(--space-6, 1.5rem);
    padding: 0 var(--space-6, 1.5rem);
    font-style: italic;
  }

  .demo-section {
    background: var(--color-neutral-100, #f3f4f6);
    padding: var(--space-8, 2rem);
    border-top: 1px solid var(--color-neutral-200, #e5e7eb);
  }

  /* Hero Demo Styles */
  .hero-demo {
    position: relative;
    min-height: 60vh;
    color: white;
    border-radius: var(--radius-lg, 0.5rem);
    overflow: hidden;
  }

  .hero-background-demo {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-primary-dark, #e55a2b), var(--color-primary, #ff6b35));
    z-index: -1;
  }

  .hero-container-demo {
    position: relative;
    z-index: 1;
    padding: var(--space-8, 2rem);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hero-main-content-demo {
    margin-bottom: var(--space-8, 2rem);
  }

  .hero-title-demo {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    margin-bottom: var(--space-8, 2rem);
  }

  .hero-middle-content-demo {
    display: flex;
    flex-direction: column;
    gap: var(--space-8, 2rem);
  }

  @media (min-width: 1024px) {
    .hero-middle-content-demo {
      flex-direction: row;
      align-items: flex-start;
    }
  }

  .hero-stats-demo {
    display: flex;
    flex-direction: column;
    gap: var(--space-6, 1.5rem);
  }

  @media (min-width: 640px) {
    .hero-stats-demo {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .hero-stat-demo {
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero-stat-demo {
      text-align: left;
    }
  }

  .stat-label-demo {
    font-size: var(--font-size-lg, 1.125rem);
    margin-bottom: var(--space-2, 0.5rem);
  }

  .stat-number-demo {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: var(--space-1, 0.25rem);
  }

  @media (min-width: 768px) {
    .stat-number-demo {
      justify-content: flex-start;
    }
  }

  .stat-value-demo {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
  }

  .stat-suffix-demo {
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 600;
    opacity: 0.8;
  }

  .hero-description-section-demo {
    max-width: 600px;
  }

  .hero-description-demo {
    font-size: var(--font-size-lg, 1.125rem);
    margin-bottom: var(--space-6, 1.5rem);
    line-height: 1.6;
  }

  .hero-actions-demo {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4, 1rem);
  }

  .hero-contact-grid-demo {
    display: flex;
    flex-direction: column;
    gap: var(--space-4, 1rem);
  }

  @media (min-width: 768px) {
    .hero-contact-grid-demo {
      flex-direction: row;
      gap: var(--space-6, 1.5rem);
    }
  }

  .contact-block-demo {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-lg, 0.5rem);
    padding: var(--space-4, 1rem);
    flex: 1;
  }

  .newsletter-form-demo {
    display: flex;
    flex-direction: column;
    gap: var(--space-2, 0.5rem);
    margin-top: var(--space-3, 0.75rem);
  }

  .newsletter-input-demo {
    padding: var(--space-2, 0.5rem);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--radius-md, 0.375rem);
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .newsletter-input-demo::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter-button-demo {
    padding: var(--space-2, 0.5rem);
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--radius-md, 0.375rem);
    color: white;
    cursor: pointer;
  }

  /* Section Header Demo */
  .section-header-demo {
    text-align: center;
    margin-bottom: var(--space-12, 3rem);
  }

  .section-header-demo h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    margin-bottom: var(--space-4, 1rem);
    color: var(--color-neutral-900, #111827);
  }

  .section-header-demo h3 {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: 500;
    color: var(--color-primary, #ff6b35);
    margin-bottom: var(--space-4, 1rem);
  }

  .section-header-demo p {
    font-size: var(--font-size-lg, 1.125rem);
    color: var(--color-neutral-600, #4b5563);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .subtitle-wrapper-demo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4, 1rem);
    margin-bottom: var(--space-6, 1.5rem);
  }

  .subtitle-demo {
    font-size: var(--font-size-lg, 1.125rem);
    font-weight: 600;
    color: var(--color-primary, #ff6b35);
  }

  .subtitle-divider-demo {
    height: 2px;
    background: var(--color-primary, #ff6b35);
    width: 60px;
  }

  /* Grid Demo Styles */
  .grid-demo {
    display: grid;
    gap: var(--space-6, 1.5rem);
    margin-bottom: var(--space-12, 3rem);
