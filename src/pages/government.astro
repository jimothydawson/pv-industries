import CollaborationIcon from '../components/icons/CollaborationIcon.astro';

// Government testimonials data
const testimonialsData = {
  testimonials: [
    {
      quote: "Working with PV Industries made our solar infrastructure replacement program simple and cost-effective. Their team handled the logistics and reporting with professionalism.",
