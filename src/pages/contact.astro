---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import LocationMapSection from '../components/LocationMapSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Contact Us - PV Industries";
const pageDescription = "Get in touch with PV Industries for solar panel recycling services. Contact our team for quotes, consultations, and more information.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main>
    <ContactSection />
    <LocationMapSection />
  </main>
  <Footer />
</Layout>
