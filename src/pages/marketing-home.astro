---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import MarketingHeroSection from '../components/MarketingHeroSection.astro';
import MarketingIntroSection from '../components/MarketingIntroSection.astro';
import MarketingCoreServicesSection from '../components/MarketingCoreServicesSection.astro';
import MarketingIndustrySolutionsSection from '../components/MarketingIndustrySolutionsSection.astro';
import MarketingWhyChooseSection from '../components/MarketingWhyChooseSection.astro';
import MarketingIndustriesServedSection from '../components/MarketingIndustriesServedSection.astro';
import MarketingImpactSection from '../components/MarketingImpactSection.astro';
import MarketingTestimonialsSection from '../components/MarketingTestimonialsSection.astro';
import MarketingCommitmentSection from '../components/MarketingCommitmentSection.astro';
import MarketingWorkWithUsSection from '../components/MarketingWorkWithUsSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "PV Industries â€“ Australia's Leader in Solar Panel Recycling";
const pageDescription = "Closing the Loop on Solar Sustainability. Professional solar panel recycling services with 95% material recovery rates. Nationwide collection network across Australia.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main>
    <!-- Hero Section with exact marketing document H1, H2 structure -->
    <MarketingHeroSection />
    
    <!-- Introduction Section with H3 and body text from marketing document -->
    <MarketingIntroSection />
    
    <!-- Core Services Section with three main services -->
    <MarketingCoreServicesSection />
    
    <!-- Industry Solutions Section with four sectors and process link -->
    <MarketingIndustrySolutionsSection />
    
    <!-- Why Choose Section with four key reasons -->
    <MarketingWhyChooseSection />
    
    <!-- Industries We Serve Section with four industry types -->
    <MarketingIndustriesServedSection />
    
    <!-- Impact Section with statistics and nationwide coverage map -->
    <MarketingImpactSection />
    
    <!-- Testimonials Section with exact client quotes -->
    <MarketingTestimonialsSection />
    
    <!-- Commitment Section with four core values and CTA -->
    <MarketingCommitmentSection />
    
    <!-- Work With Us Section with contact methods and quick links -->
    <MarketingWorkWithUsSection />
    
    <!-- Contact Section with form and contact information -->
    <ContactSection />
  </main>
  <Footer />
</Layout>

<style>
  /* Global styles for the marketing home page */
  main {
    overflow-x: hidden;
  }

  /* Ensure smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Add some spacing between sections */
  main > :global(section:not(:last-child)) {
    margin-bottom: 0;
  }

  /* Ensure consistent section spacing */
  main > :global(section) {
    position: relative;
  }

  /* Add subtle animations for better user experience */
  @media (prefers-reduced-motion: no-preference) {
    main > :global(section) {
      animation: fadeIn 0.6s ease-out;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    main {
      padding-top: 0;
    }
  }
</style>
</Layout>